            </svg>
          </a>
        {% endif %}

        {% if block.settings.whatsapp_url != blank %}
          <a
            href="{{ block.settings.whatsapp_url }}"
            class="ai-contact-split-social-link-{{ ai_gen_id }}"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="WhatsApp"
          >
