{% doc %}
  @prompt
    Create a split-layout contact section with an image on the left (40% width) and contact form with information on the right (60% width). The right side should include a large "Contact Us" heading, a contact form with fields for Full Name, E-mail, and Message, contact information displaying an email address and location (San Francisco, California), a rounded black submit button labeled "Contact Us", and clickable social media icons (Facebook, Instagram, WhatsApp) at the bottom right that can be linked to custom URLs through theme settings. The icons should be styled consistently and have hover effects. The design should have a clean, modern aesthetic with a light beige/cream background, proper spacing between elements, and be fully responsive on mobile devices with the image stacking above the form.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-contact-split-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    background-color: {{ block.settings.background_color }};
  }

  .ai-contact-split-container-{{ ai_gen_id }} {
    display: flex;
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    min-height: 600px;
  }

  .ai-contact-split-image-{{ ai_gen_id }} {
    width: 40%;
    position: relative;
    overflow: hidden;
  }

  .ai-contact-split-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-contact-split-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #e5e5e5;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-contact-split-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 300px;
  }

  .ai-contact-split-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-contact-split-content-{{ ai_gen_id }} {
    width: 60%;
    padding: {{ block.settings.content_padding }}px;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .ai-contact-split-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.spacing }}px 0;
    font-weight: 600;
  }

  .ai-contact-split-form-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.field_spacing }}px;
    margin-bottom: {{ block.settings.spacing }}px;
  }

  .ai-contact-split-field-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .ai-contact-split-label-{{ ai_gen_id }} {
    font-size: {{ block.settings.label_size }}px;
    color: {{ block.settings.text_color }};
    font-weight: 500;
  }

  .ai-contact-split-input-{{ ai_gen_id }},
  .ai-contact-split-textarea-{{ ai_gen_id }} {
    padding: {{ block.settings.input_padding }}px;
    border: {{ block.settings.input_border_width }}px solid {{ block.settings.input_border_color }};
    border-radius: {{ block.settings.input_border_radius }}px;
    font-size: {{ block.settings.input_text_size }}px;
    color: {{ block.settings.text_color }};
    background-color: {{ block.settings.input_background }};
    font-family: inherit;
  }

  .ai-contact-split-input-{{ ai_gen_id }}:focus,
  .ai-contact-split-textarea-{{ ai_gen_id }}:focus {
    outline: 2px solid {{ block.settings.input_focus_color }};
    outline-offset: 2px;
  }

  .ai-contact-split-textarea-{{ ai_gen_id }} {
    min-height: 120px;
    resize: vertical;
  }

  .ai-contact-split-button-{{ ai_gen_id }} {
    padding: {{ block.settings.button_padding }}px {{ block.settings.button_padding | times: 2 }}px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 600;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.2s ease;
    align-self: flex-start;
  }

  .ai-contact-split-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
    transform: translateY(-2px);
  }

  .ai-contact-split-info-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.info_spacing }}px;
    margin-bottom: {{ block.settings.spacing }}px;
  }

  .ai-contact-split-info-item-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 12px;
    font-size: {{ block.settings.info_text_size }}px;
    color: {{ block.settings.text_color }};
  }

  .ai-contact-split-info-icon-{{ ai_gen_id }} {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
  }

  .ai-contact-split-info-icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    fill: {{ block.settings.icon_color }};
  }

  .ai-contact-split-social-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.social_spacing }}px;
    align-items: center;
  }

  .ai-contact-split-social-link-{{ ai_gen_id }} {
    width: {{ block.settings.social_icon_size }}px;
    height: {{ block.settings.social_icon_size }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ block.settings.social_bg_color }};
    border-radius: {{ block.settings.social_border_radius }}px;
    transition: background-color 0.3s ease, transform 0.2s ease;
    text-decoration: none;
  }

  .ai-contact-split-social-link-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.social_hover_bg_color }};
    transform: translateY(-3px);
  }

  .ai-contact-split-social-link-{{ ai_gen_id }} svg {
    width: {{ block.settings.social_icon_size | times: 0.5 }}px;
    height: {{ block.settings.social_icon_size | times: 0.5 }}px;
    fill: {{ block.settings.social_icon_color }};
  }

  .ai-contact-split-success-{{ ai_gen_id }} {
    padding: 16px;
    background-color: #d4edda;
    color: #155724;
    border-radius: {{ block.settings.input_border_radius }}px;
    margin-bottom: {{ block.settings.spacing }}px;
    font-size: {{ block.settings.input_text_size }}px;
  }

  .ai-contact-split-error-{{ ai_gen_id }} {
    padding: 16px;
    background-color: #f8d7da;
    color: #721c24;
    border-radius: {{ block.settings.input_border_radius }}px;
    margin-bottom: {{ block.settings.spacing }}px;
    font-size: {{ block.settings.input_text_size }}px;
  }

  @media screen and (max-width: 768px) {
    .ai-contact-split-container-{{ ai_gen_id }} {
      flex-direction: column;
    }

    .ai-contact-split-image-{{ ai_gen_id }} {
      width: 100%;
      min-height: 300px;
    }

    .ai-contact-split-content-{{ ai_gen_id }} {
      width: 100%;
      padding: {{ block.settings.content_padding | times: 0.7 }}px;
    }

    .ai-contact-split-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-contact-split-button-{{ ai_gen_id }} {
      width: 100%;
    }
  }
{% endstyle %}

<contact-split-{{ ai_gen_id }} class="ai-contact-split-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-contact-split-container-{{ ai_gen_id }}">
    <div class="ai-contact-split-image-{{ ai_gen_id }}">
      {% if block.settings.image %}
        <img
          src="{{ block.settings.image | image_url: width: 1000 }}"
          alt="{{ block.settings.image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.image.width }}"
          height="{{ block.settings.image.height }}"
        >
      {% else %}
        <div class="ai-contact-split-image-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
          <div class="ai-contact-split-empty-state-{{ ai_gen_id }}">
            Next, add an image
          </div>
        </div>
      {% endif %}
    </div>

    <div class="ai-contact-split-content-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h2 class="ai-contact-split-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      {% endif %}

      {%- form 'contact' -%}
        {% if form.posted_successfully? %}
          <div class="ai-contact-split-success-{{ ai_gen_id }}">
            {{ block.settings.success_message }}
          </div>
        {% endif %}

        {% if form.errors %}
          <div class="ai-contact-split-error-{{ ai_gen_id }}">
            {{ form.errors | default_errors }}
          </div>
        {% endif %}

        <div class="ai-contact-split-form-{{ ai_gen_id }}">
          <div class="ai-contact-split-field-{{ ai_gen_id }}">
            <label class="ai-contact-split-label-{{ ai_gen_id }}" for="contact-name-{{ ai_gen_id }}">
              {{ block.settings.name_label }}
            </label>
            <input
              type="text"
              id="contact-name-{{ ai_gen_id }}"
              name="contact[name]"
              class="ai-contact-split-input-{{ ai_gen_id }}"
              value="{% if form.name %}{{ form.name }}{% endif %}"
              placeholder="{{ block.settings.name_placeholder }}"
              required
            >
          </div>

          <div class="ai-contact-split-field-{{ ai_gen_id }}">
            <label class="ai-contact-split-label-{{ ai_gen_id }}" for="contact-email-{{ ai_gen_id }}">
              {{ block.settings.email_label }}
            </label>
            <input
              type="email"
              id="contact-email-{{ ai_gen_id }}"
              name="contact[email]"
              class="ai-contact-split-input-{{ ai_gen_id }}"
              value="{% if form.email %}{{ form.email }}{% endif %}"
              placeholder="{{ block.settings.email_placeholder }}"
              autocomplete="email"
              required
            >
          </div>

          <div class="ai-contact-split-field-{{ ai_gen_id }}">
            <label class="ai-contact-split-label-{{ ai_gen_id }}" for="contact-message-{{ ai_gen_id }}">
              {{ block.settings.message_label }}
            </label>
            <textarea
              id="contact-message-{{ ai_gen_id }}"
              name="contact[body]"
              class="ai-contact-split-textarea-{{ ai_gen_id }}"
              placeholder="{{ block.settings.message_placeholder }}"
              required
            >{% if form.body %}{{ form.body }}{% endif %}</textarea>
          </div>

          <button type="submit" class="ai-contact-split-button-{{ ai_gen_id }}">
            {{ block.settings.button_text }}
          </button>
        </div>
      {%- endform -%}

      <div class="ai-contact-split-info-{{ ai_gen_id }}">
        {% if block.settings.email_address != blank %}
          <div class="ai-contact-split-info-item-{{ ai_gen_id }}">
            <div class="ai-contact-split-info-icon-{{ ai_gen_id }}">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
              </svg>
            </div>
            <span>{{ block.settings.email_address }}</span>
          </div>
        {% endif %}

        {% if block.settings.location != blank %}
          <div class="ai-contact-split-info-item-{{ ai_gen_id }}">
            <div class="ai-contact-split-info-icon-{{ ai_gen_id }}">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
              </svg>
            </div>
            <span>{{ block.settings.location }}</span>
          </div>
        {% endif %}
      </div>

      <div class="ai-contact-split-social-{{ ai_gen_id }}">
        {% if block.settings.facebook_url != blank %}
          <a
            href="{{ block.settings.facebook_url }}"
            class="ai-contact-split-social-link-{{ ai_gen_id }}"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Facebook"
          >
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
        {% endif %}

        {% if block.settings.instagram_url != blank %}
