<script>
  (function() {
    class ProductSplitScreen{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentMediaIndex = 0;
        this.productId = this.dataset.productId;
      }

      connectedCallback() {
        this.mediaWrapper = this.querySelector('.ai-split-product-media-wrapper-{{ ai_gen_id }}');
        this.prevBtn = this.querySelector('.ai-split-product-nav-{{ ai_gen_id }}--prev');
        this.nextBtn = this.querySelector('.ai-split-product-nav-{{ ai_gen_id }}--next');
        this.variantSelect = this.querySelector('#variant-select-{{ ai_gen_id }}');
        this.qtyInput = this.querySelector('.ai-split-product-qty-input-{{ ai_gen_id }}');
        this.qtyBtns = this.querySelectorAll('.ai-split-product-qty-btn-{{ ai_gen_id }}');
        this.addToCartBtn = this.querySelector('[data-add-to-cart]');
        this.priceElement = this.querySelector('.ai-split-product-price-{{ ai_gen_id }}');

        this.setupEventListeners();
        this.fetchProductData();
      }

      setupEventListeners() {
        if (this.prevBtn) {
          this.prevBtn.addEventListener('click', () => this.navigateMedia(-1));
        }
        if (this.nextBtn) {
          this.nextBtn.addEventListener('click', () => this.navigateMedia(1));
        }

        if (this.variantSelect) {
          this.variantSelect.addEventListener('change', (e) => this.handleVariantChange(e));
        }

        this.qtyBtns.forEach(btn => {
          btn.addEventListener('click', (e) => this.handleQuantityChange(e));
        });

        if (this.addToCartBtn) {
          this.addToCartBtn.addEventListener('click', () => this.addToCart());
        }
      }

      async fetchProductData() {
        try {
          const response = await fetch(`/products/${this.productId}.js`);
          this.productData = await response.json();
          this.media = this.productData.media || [];
        } catch (error) {
          console.error('Error fetching product data:', error);
        }
      }

      navigateMedia(direction) {
        if (!this.media || this.media.length <= 1) return;

        this.currentMediaIndex += direction;
        if (this.currentMediaIndex < 0) {
          this.currentMediaIndex = this.media.length - 1;
        } else if (this.currentMediaIndex >= this.media.length) {
          this.currentMediaIndex = 0;
        }

        const currentMedia = this.media[this.currentMediaIndex];
        const img = this.mediaWrapper.querySelector('img');
        if (img && currentMedia) {
          img.src = currentMedia.src;
          img.alt = currentMedia.alt || '';
        }
      }

      handleVariantChange(e) {
        const variantId = e.target.value;
        const variant = this.productData.variants.find(v => v.id == variantId);
        if (variant && this.priceElement) {
          const formatter = new Intl.NumberFormat('en-US', {
            style: 'currency',
            currency: '{{ cart.currency.iso_code }}'
          });
          this.priceElement.textContent = formatter.format(variant.price / 100);
        }
      }

      handleQuantityChange(e) {
        const action = e.currentTarget.dataset.action;
        let currentValue = parseInt(this.qtyInput.value) || 1;

        if (action === 'increase') {
          currentValue++;
        } else if (action === 'decrease' && currentValue > 1) {
          currentValue--;
        }

        this.qtyInput.value = currentValue;
      }

      async addToCart() {
        const variantId = this.variantSelect ? this.variantSelect.value : this.productData.variants[0].id;
        const quantity = parseInt(this.qtyInput.value) || 1;

        try {
          const response = await fetch('/cart/add.js', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({
              id: variantId,
              quantity: quantity
            })
          });

          if (response.ok) {
            window.location.href = '/cart';
          }
        } catch (error) {
          console.error('Error adding to cart:', error);
        }
      }
    }

    customElements.define('product-split-screen-{{ ai_gen_id }}', ProductSplitScreen{{ ai_gen_id }});
  })();
</script>

