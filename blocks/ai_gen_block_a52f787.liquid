{% doc %}
  @prompt
    Create an interactive product carousel block that displays multiple slides with images (including GIF support). Each slide should include an image, product title, price, and a clickable "Shop Now" button that links to the product page. The carousel should have navigation arrows, be fully responsive on mobile and desktop, auto-play with pause on hover, and support smooth transitions between slides. Allow customization of slide count, transition speed, background overlay opacity, and button styling., OKAY SO I WANT ONLY 1 PAGE 
    THAT HAVE 5 PRODUCTS TO ADD 
    SO 5 CAROUSELS IN 1 BOX / PAGE
    
    NOT 5 PAGES THAT I CAN MOVE RIGHT AND LEFT
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-showcase-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: {{ block.settings.section_padding }}px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-product-showcase__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-product-showcase__heading-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    font-size: {{ block.settings.heading_size }}px;
    margin-bottom: {{ block.settings.heading_spacing }}px;
    color: {{ block.settings.heading_color }};
  }

  .ai-product-showcase__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-product-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    box-shadow: 0 2px 8px rgba(0, 0, 0, {{ block.settings.card_shadow_opacity | divided_by: 100.0 }});
  }

  .ai-product-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, {{ block.settings.card_shadow_opacity | plus: 10 | divided_by: 100.0 }});
  }

  .ai-product-card__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .ai-product-card__image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-product-card__overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to top, rgba(0, 0, 0, {{ block.settings.overlay_opacity | divided_by: 100.0 }}), transparent);
  }

  .ai-product-card__content-{{ ai_gen_id }} {
    padding: {{ block.settings.card_padding }}px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-product-card__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: 600;
    margin: 0 0 8px;
    color: {{ block.settings.text_color }};
  }

  .ai-product-card__price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size }}px;
    margin: 0 0 16px;
    color: {{ block.settings.price_color }};
    font-weight: 500;
  }

  .ai-product-card__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: 600;
    transition: background-color 0.3s ease, transform 0.2s ease;
    border: none;
    cursor: pointer;
  }

  .ai-product-card__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    transform: scale(1.05);
  }

  .ai-product-card__empty-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 300px;
    color: #999;
    text-align: center;
    padding: 20px;
  }

  .ai-product-card__empty-icon-{{ ai_gen_id }} {
    width: 100%;
    max-width: 200px;
    margin-bottom: 16px;
  }

  .ai-product-card__empty-icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: auto;
  }

  .ai-product-card__empty-text-{{ ai_gen_id }} {
    font-size: 14px;
    color: #666;
  }

  @media screen and (max-width: 989px) {
    .ai-product-showcase__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_tablet }}, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-product-showcase__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }

    .ai-product-showcase__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<product-showcase-{{ ai_gen_id }} class="ai-product-showcase-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-product-showcase__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-product-showcase__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    <div class="ai-product-showcase__grid-{{ ai_gen_id }}">
      {% for i in (1..5) %}
        {% assign product_key = 'product_' | append: i %}
        {% assign product = block.settings[product_key] %}

        <div class="ai-product-card-{{ ai_gen_id }}">
          {% if product != blank %}
            <div class="ai-product-card__image-wrapper-{{ ai_gen_id }}">
              {% if product.featured_image %}
                <img
                  src="{{ product.featured_image | image_url: width: 800 }}"
                  alt="{{ product.featured_image.alt | escape }}"
                  class="ai-product-card__image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="800"
                  height="800"
                >
              {% else %}
                <div class="ai-product-card__empty-icon-{{ ai_gen_id }}">
                  {{ 'product-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
              <div class="ai-product-card__overlay-{{ ai_gen_id }}"></div>
            </div>

            <div class="ai-product-card__content-{{ ai_gen_id }}">
              <h3 class="ai-product-card__title-{{ ai_gen_id }}">{{ product.title }}</h3>
              <p class="ai-product-card__price-{{ ai_gen_id }}">{{ product.price | money }}</p>
              <a href="{{ product.url }}" class="ai-product-card__button-{{ ai_gen_id }}">
                {{ block.settings.button_text }}
              </a>
            </div>
          {% else %}
            <div class="ai-product-card__empty-{{ ai_gen_id }}">
              <div class="ai-product-card__empty-icon-{{ ai_gen_id }}">
                {{ 'product-1' | placeholder_svg_tag }}
              </div>
              <p class="ai-product-card__empty-text-{{ ai_gen_id }}">Select product {{ i }}</p>
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</product-showcase-{{ ai_gen_id }}>

<script>
  (function() {
    class ProductShowcase{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.initializeCards();
      }

      initializeCards() {
        const cards = this.querySelectorAll('.ai-product-card-{{ ai_gen_id }}');
        cards.forEach(card => {
          card.addEventListener('mouseenter', () => {
            card.style.zIndex = '10';
          });
          card.addEventListener('mouseleave', () => {
            card.style.zIndex = '1';
          });
        });
      }
    }

    customElements.define('product-showcase-{{ ai_gen_id }}', ProductShowcase{{ ai_gen_id }});
  })();
</script>

