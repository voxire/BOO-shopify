{% doc %}
  @prompt
    Create a split-layout contact section with an image on the left (40% width) and contact form with information on the right (60% width). The right side should include a large "Contact Us" heading, a contact form with fields for Full Name, E-mail, and Message, contact information displaying an email address and location (San Francisco, California), a rounded black submit button labeled "Contact Us", and social media icons (Facebook, Instagram, Twitter) at the bottom. The design should have a clean, modern aesthetic with a light beige/cream background, proper spacing between elements, and be fully responsive on mobile devices with the image stacking above the form.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-contact-split-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    background-color: {{ block.settings.background_color }};
  }

  .ai-contact-split-container-{{ ai_gen_id }} {
    display: flex;
    width: 100%;
    max-width: 100%;
    min-height: 600px;
  }

  .ai-contact-split-image-{{ ai_gen_id }} {
    width: 40%;
    position: relative;
    overflow: hidden;
  }

  .ai-contact-split-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-contact-split-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #e5e5e5;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-contact-split-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 400px;
    max-height: 400px;
  }

  .ai-contact-split-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-contact-split-content-{{ ai_gen_id }} {
    width: 60%;
    padding: {{ block.settings.content_padding }}px;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .ai-contact-split-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.element_spacing }}px 0;
    font-weight: 700;
  }

  .ai-contact-split-form-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.field_spacing }}px;
    margin-bottom: {{ block.settings.element_spacing }}px;
  }

  .ai-contact-split-field-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .ai-contact-split-label-{{ ai_gen_id }} {
    font-size: {{ block.settings.label_size }}px;
    color: {{ block.settings.text_color }};
    font-weight: 500;
  }

  .ai-contact-split-input-{{ ai_gen_id }},
  .ai-contact-split-textarea-{{ ai_gen_id }} {
    padding: 12px 16px;
    border: 1px solid {{ block.settings.input_border_color }};
    border-radius: {{ block.settings.input_border_radius }}px;
    font-size: 14px;
    background-color: {{ block.settings.input_background }};
    color: {{ block.settings.text_color }};
    font-family: inherit;
  }

  .ai-contact-split-input-{{ ai_gen_id }}:focus,
  .ai-contact-split-textarea-{{ ai_gen_id }}:focus {
    outline: 2px solid {{ block.settings.button_color }};
    outline-offset: 2px;
  }

  .ai-contact-split-textarea-{{ ai_gen_id }} {
    min-height: 120px;
    resize: vertical;
  }

  .ai-contact-split-button-{{ ai_gen_id }} {
    padding: 14px 32px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    align-self: flex-start;
    transition: background-color 0.3s ease;
  }

  .ai-contact-split-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-contact-split-info-{{ ai_gen_id }} {
    margin-bottom: {{ block.settings.element_spacing }}px;
  }

  .ai-contact-split-info-item-{{ ai_gen_id }} {
    display: flex;
    align-items: flex-start;
    gap: 12px;
    margin-bottom: 16px;
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.info_size }}px;
  }

  .ai-contact-split-info-icon-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: 20px;
    height: 20px;
    margin-top: 2px;
  }

  .ai-contact-split-info-icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    stroke: {{ block.settings.icon_color }};
  }

  .ai-contact-split-social-{{ ai_gen_id }} {
    display: flex;
    gap: 16px;
    align-items: center;
  }

  .ai-contact-split-social-link-{{ ai_gen_id }} {
    width: {{ block.settings.social_icon_size }}px;
    height: {{ block.settings.social_icon_size }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.3s ease;
  }

  .ai-contact-split-social-link-{{ ai_gen_id }}:hover {
    transform: scale(1.1);
  }

  .ai-contact-split-social-link-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    fill: {{ block.settings.social_icon_color }};
  }

  .ai-contact-split-success-{{ ai_gen_id }} {
    color: {{ block.settings.success_color }};
    margin-top: 16px;
    font-size: 14px;
  }

  .ai-contact-split-error-{{ ai_gen_id }} {
    color: {{ block.settings.error_color }};
    margin-top: 8px;
    font-size: 14px;
  }

  @media screen and (max-width: 749px) {
    .ai-contact-split-container-{{ ai_gen_id }} {
      flex-direction: column;
      min-height: auto;
    }

    .ai-contact-split-image-{{ ai_gen_id }} {
      width: 100%;
      min-height: 300px;
    }

    .ai-contact-split-content-{{ ai_gen_id }} {
      width: 100%;
      padding: {{ block.settings.content_padding | times: 0.6 }}px;
    }

    .ai-contact-split-heading-{{ ai_gen_id }} {
