    }

    .ai-contact-split-button-{{ ai_gen_id }} {
      width: 100%;
    }
  }
{% endstyle %}

<contact-split-{{ ai_gen_id }} class="ai-contact-split-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-contact-split-container-{{ ai_gen_id }}">
    <div class="ai-contact-split-image-{{ ai_gen_id }}">
      {% if block.settings.image %}
        <img
          src="{{ block.settings.image | image_url: width: 1000 }}"
          alt="{{ block.settings.image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.image.width }}"
          height="{{ block.settings.image.height }}"
        >
      {% else %}
        <div class="ai-contact-split-image-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
          <div class="ai-contact-split-empty-state-{{ ai_gen_id }}">
            Next, add an image
          </div>
        </div>
      {% endif %}
    </div>

    <div class="ai-contact-split-content-{{ ai_gen_id }}">
      <h2 class="ai-contact-split-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>

      {%- form 'contact' -%}
        <div class="ai-contact-split-form-{{ ai_gen_id }}">
          <div class="ai-contact-split-field-{{ ai_gen_id }}">
            <label for="contact-name-{{ ai_gen_id }}" class="ai-contact-split-label-{{ ai_gen_id }}">
              {{ block.settings.name_label }}
            </label>
            <input
              type="text"
              id="contact-name-{{ ai_gen_id }}"
              name="contact[name]"
              class="ai-contact-split-input-{{ ai_gen_id }}"
              value="{{ form.name }}"
              placeholder="{{ block.settings.name_placeholder }}"
              required
            >
          </div>

          <div class="ai-contact-split-field-{{ ai_gen_id }}">
            <label for="contact-email-{{ ai_gen_id }}" class="ai-contact-split-label-{{ ai_gen_id }}">
              {{ block.settings.email_label }}
            </label>
            <input
              type="email"
              id="contact-email-{{ ai_gen_id }}"
              name="contact[email]"
              class="ai-contact-split-input-{{ ai_gen_id }}"
              value="{{ form.email }}"
              autocorrect="off"
              autocapitalize="off"
              autocomplete="email"
              {% if form.errors %}
                aria-invalid="true"
                aria-describedby="contact-error-{{ ai_gen_id }}"
              {% endif %}
              placeholder="{{ block.settings.email_placeholder }}"
              required
            >
            {%- if form.errors -%}
              <div id="contact-error-{{ ai_gen_id }}" class="ai-contact-split-error-{{ ai_gen_id }}">
                {{ form.errors.messages.email }}
              </div>
            {%- endif -%}
          </div>

          <div class="ai-contact-split-field-{{ ai_gen_id }}">
            <label for="contact-message-{{ ai_gen_id }}" class="ai-contact-split-label-{{ ai_gen_id }}">
              {{ block.settings.message_label }}
            </label>
            <textarea
              id="contact-message-{{ ai_gen_id }}"
              name="contact[body]"
              class="ai-contact-split-textarea-{{ ai_gen_id }}"
              placeholder="{{ block.settings.message_placeholder }}"
              required
            >{{ form.body }}</textarea>
          </div>

          <button type="submit" class="ai-contact-split-button-{{ ai_gen_id }}">
            {{ block.settings.button_text }}
          </button>

          {%- if form.posted_successfully? -%}
            <div class="ai-contact-split-success-{{ ai_gen_id }}">
              {{ block.settings.success_message }}
            </div>
          {%- endif -%}
        </div>
      {%- endform -%}

      {% if block.settings.show_contact_info %}
        <div class="ai-contact-split-info-{{ ai_gen_id }}">
          {% if block.settings.email_address != blank %}
            <div class="ai-contact-split-info-item-{{ ai_gen_id }}">
              <div class="ai-contact-split-info-icon-{{ ai_gen_id }}">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <rect x="2" y="4" width="20" height="16" rx="2"></rect>
                  <path d="m2 7 10 7 10-7"></path>
                </svg>
              </div>
              <div>{{ block.settings.email_address }}</div>
            </div>
          {% endif %}

          {% if block.settings.location != blank %}
            <div class="ai-contact-split-info-item-{{ ai_gen_id }}">
              <div class="ai-contact-split-info-icon-{{ ai_gen_id }}">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"></path>
                  <circle cx="12" cy="10" r="3"></circle>
                </svg>
              </div>
              <div>{{ block.settings.location }}</div>
            </div>
          {% endif %}
        </div>
      {% endif %}

      {% if block.settings.show_social %}
        <div class="ai-contact-split-social-{{ ai_gen_id }}">
          {% if block.settings.facebook_url != blank %}
            <a href="{{ block.settings.facebook_url }}" class="ai-contact-split-social-link-{{ ai_gen_id }}" target="_blank" rel="noopener" aria-label="Facebook">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
              </svg>
            </a>
          {% endif %}

          {% if block.settings.instagram_url != blank %}
            <a href="{{ block.settings.instagram_url }}" class="ai-contact-split-social-link-{{ ai_gen_id }}" target="_blank" rel="noopener" aria-label="Instagram">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
                <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
                <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
              </svg>
            </a>
          {% endif %}

          {% if block.settings.twitter_url != blank %}
            <a href="{{ block.settings.twitter_url }}" class="ai-contact-split-social-link-{{ ai_gen_id }}" target="_blank" rel="noopener" aria-label="Twitter">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                <path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"></path>
              </svg>
            </a>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</contact-split-{{ ai_gen_id }}>

<script>
  (function() {
    class ContactSplit{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.form = this.querySelector('form');
        if (this.form) {
          this.form.addEventListener('submit', this.handleSubmit.bind(this));
        }
      }

      handleSubmit(event) {
        const inputs = this.form.querySelectorAll('input[required], textarea[required]');
        let isValid = true;

        inputs.forEach(input => {
          if (!input.value.trim()) {
            isValid = false;
            input.style.borderColor = '{{ block.settings.error_color }}';
          } else {
            input.style.borderColor = '{{ block.settings.input_border_color }}';
          }
        });

        if (!isValid) {
          event.preventDefault();
        }
      }
    }

    customElements.define('contact-split-{{ ai_gen_id }}', ContactSplit{{ ai_gen_id }});
  })();
</script>

