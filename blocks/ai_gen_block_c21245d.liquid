{% doc %}
  @prompt
    Create an interactive product carousel section that displays 5 products in a horizontal scrollable layout. The carousel should show product images with product names overlaid on the images in white text. Include navigation arrows for desktop and swipe functionality for mobile. The design should have a clean, modern look with the products displayed side-by-side, similar to a category showcase layout.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-carousel-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    position: relative;
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-product-carousel-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
  }

  .ai-product-carousel-header-{{ ai_gen_id }} {
    margin-bottom: 30px;
    text-align: {{ block.settings.heading_alignment }};
  }

  .ai-product-carousel-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0;
    font-weight: 600;
  }

  .ai-product-carousel-wrapper-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
  }

  .ai-product-carousel-track-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.product_gap }}px;
    overflow-x: auto;
    scroll-behavior: smooth;
    scrollbar-width: none;
    -ms-overflow-style: none;
    padding: 10px 0;
  }

  .ai-product-carousel-track-{{ ai_gen_id }}::-webkit-scrollbar {
    display: none;
  }

  .ai-product-carousel-item-{{ ai_gen_id }} {
    flex: 0 0 calc((100% - ({{ block.settings.product_gap }}px * 4)) / 5);
    min-width: calc((100% - ({{ block.settings.product_gap }}px * 4)) / 5);
    position: relative;
    cursor: pointer;
  }

  .ai-product-carousel-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
    background-color: #f4f4f4;
  }

  .ai-product-carousel-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-product-carousel-item-{{ ai_gen_id }}:hover .ai-product-carousel-image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-product-carousel-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-product-carousel-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-product-carousel-overlay-{{ ai_gen_id }} {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 20px 15px;
    background: linear-gradient(to top, rgba(0, 0, 0, {{ block.settings.overlay_opacity }}), transparent);
    display: flex;
    flex-direction: column;
    gap: 5px;
  }

  .ai-product-carousel-name-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.product_name_size }}px;
    font-weight: 600;
    margin: 0;
    line-height: 1.3;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.3);
  }

  .ai-product-carousel-price-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.product_price_size }}px;
    margin: 0;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.3);
  }

  .ai-product-carousel-nav-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background-color: {{ block.settings.arrow_background }};
    color: {{ block.settings.arrow_color }};
    border: none;
    width: 48px;
    height: 48px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    z-index: 2;
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  }

  .ai-product-carousel-nav-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.arrow_hover_background }};
    transform: translateY(-50%) scale(1.1);
  }

  .ai-product-carousel-nav-{{ ai_gen_id }}:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .ai-product-carousel-nav-{{ ai_gen_id }}:disabled:hover {
    transform: translateY(-50%) scale(1);
  }

  .ai-product-carousel-nav-prev-{{ ai_gen_id }} {
    left: -24px;
  }

  .ai-product-carousel-nav-next-{{ ai_gen_id }} {
    right: -24px;
  }

  .ai-product-carousel-nav-{{ ai_gen_id }} svg {
    width: 24px;
    height: 24px;
  }

  @media screen and (max-width: 989px) {
    .ai-product-carousel-item-{{ ai_gen_id }} {
      flex: 0 0 calc((100% - ({{ block.settings.product_gap }}px * 2)) / 3);
      min-width: calc((100% - ({{ block.settings.product_gap }}px * 2)) / 3);
    }

    .ai-product-carousel-nav-{{ ai_gen_id }} {
      display: none;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-product-carousel-item-{{ ai_gen_id }} {
      flex: 0 0 calc((100% - {{ block.settings.product_gap }}px) / 2);
      min-width: calc((100% - {{ block.settings.product_gap }}px) / 2);
    }

    .ai-product-carousel-title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.8);
    }

    .ai-product-carousel-name-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.product_name_size }}px * 0.9);
    }

    .ai-product-carousel-overlay-{{ ai_gen_id }} {
      padding: 15px 10px;
    }
  }
{% endstyle %}

<product-carousel-{{ ai_gen_id }} class="ai-product-carousel-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-product-carousel-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <div class="ai-product-carousel-header-{{ ai_gen_id }}">
        <h2 class="ai-product-carousel-title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      </div>
    {% endif %}

    <div class="ai-product-carousel-wrapper-{{ ai_gen_id }}">
      <button
        class="ai-product-carousel-nav-{{ ai_gen_id }} ai-product-carousel-nav-prev-{{ ai_gen_id }}"
        aria-label="Previous products"
        data-direction="prev"
      >
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="15 18 9 12 15 6"></polyline>
        </svg>
      </button>

      <div class="ai-product-carousel-track-{{ ai_gen_id }}">
        {% for i in (1..5) %}
          {% assign product_key = 'product_' | append: i %}
          {% assign product = block.settings[product_key] %}

          <div class="ai-product-carousel-item-{{ ai_gen_id }}" data-product-index="{{ i }}">
            <a href="{% if product %}{{ product.url }}{% else %}#{% endif %}" class="ai-product-carousel-link-{{ ai_gen_id }}">
              <div class="ai-product-carousel-image-wrapper-{{ ai_gen_id }}">
                {% if product and product.featured_image %}
                  <img
                    src="{{ product.featured_image | image_url: width: 600 }}"
                    alt="{{ product.featured_image.alt | escape }}"
                    class="ai-product-carousel-image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="600"
                    height="600"
                  >
                {% else %}
                  <div class="ai-product-carousel-placeholder-{{ ai_gen_id }}">
                    {{ 'product-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}

                <div class="ai-product-carousel-overlay-{{ ai_gen_id }}">
                  <h3 class="ai-product-carousel-name-{{ ai_gen_id }}">
                    {% if product %}
                      {{ product.title }}
                    {% else %}
                      Product {{ i }}
                    {% endif %}
                  </h3>
                  {% if block.settings.show_price %}
                    <div class="ai-product-carousel-price-{{ ai_gen_id }}">
                      {% if product %}
                        {{ product.price | money }}
                      {% else %}
                        $0.00
                      {% endif %}
                    </div>
                  {% endif %}
                </div>
              </div>
            </a>
          </div>
        {% endfor %}
      </div>

      <button
        class="ai-product-carousel-nav-{{ ai_gen_id }} ai-product-carousel-nav-next-{{ ai_gen_id }}"
        aria-label="Next products"
        data-direction="next"
      >
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="9 18 15 12 9 6"></polyline>
        </svg>
      </button>
    </div>
  </div>
</product-carousel-{{ ai_gen_id }}>

<script>
  (function() {
    class ProductCarousel{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.track = this.querySelector('.ai-product-carousel-track-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.ai-product-carousel-nav-prev-{{ ai_gen_id }}');
        this.nextButton = this.querySelector('.ai-product-carousel-nav-next-{{ ai_gen_id }}');
        this.scrollAmount = 0;
      }

      connectedCallback() {
        this.setupNavigation();
        this.updateButtonStates();
        this.track.addEventListener('scroll', () => this.updateButtonStates());
      }

      setupNavigation() {
        this.prevButton.addEventListener('click', () => this.scroll('prev'));
        this.nextButton.addEventListener('click', () => this.scroll('next'));
      }

      scroll(direction) {
        const itemWidth = this.track.querySelector('.ai-product-carousel-item-{{ ai_gen_id }}').offsetWidth;
        const gap = {{ block.settings.product_gap }};
        const scrollDistance = itemWidth + gap;

        if (direction === 'next') {
          this.track.scrollLeft += scrollDistance;
        } else {
          this.track.scrollLeft -= scrollDistance;
        }
      }

      updateButtonStates() {
        const maxScroll = this.track.scrollWidth - this.track.clientWidth;
        
        this.prevButton.disabled = this.track.scrollLeft <= 0;
        this.nextButton.disabled = this.track.scrollLeft >= maxScroll - 1;
      }
    }

    customElements.define('product-carousel-{{ ai_gen_id }}', ProductCarousel{{ ai_gen_id }});
  })();
</script>

