    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0;
    width: 100%;
    max-width: 100%;
    min-height: {{ block.settings.section_height }}vh;
    position: relative;
  }

  .ai-product-glass-card-image-column-{{ ai_gen_id }} {
