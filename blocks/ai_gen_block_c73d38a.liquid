    width: 100%;
    height: 100%;
    min-height: {{ block.settings.section_height }}vh;
    overflow: hidden;
  }

  .ai-product-glass-card-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-product-glass-card-content-column-{{ ai_gen_id }} {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.content_padding }}px;
    background: {{ block.settings.background_color }};
    {% if block.settings.background_image %}
