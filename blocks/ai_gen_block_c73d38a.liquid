<product-glass-card-{{ ai_gen_id }} class="ai-product-glass-card-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-product-glass-card-container-{{ ai_gen_id }}">
    <div class="ai-product-glass-card-image-column-{{ ai_gen_id }}">
      {% if product.featured_image %}
        <img
          src="{{ product.featured_image | image_url: width: 2000 }}"
          alt="{{ product.featured_image.alt | escape }}"
          class="ai-product-glass-card-image-{{ ai_gen_id }}"
          loading="lazy"
          width="{{ product.featured_image.width }}"
          height="{{ product.featured_image.height }}"
        >
      {% else %}
        <div class="ai-product-glass-card-image-placeholder-{{ ai_gen_id }}">
          {{ 'product-1' | placeholder_svg_tag }}
        </div>
      {% endif %}
    </div>

    <div class="ai-product-glass-card-content-column-{{ ai_gen_id }}">
      <div class="ai-product-glass-card-glass-{{ ai_gen_id }}">
        {% if block.settings.show_title %}
          <h1 class="ai-product-glass-card-title-{{ ai_gen_id }}">{{ product.title }}</h1>
        {% endif %}

        {% if block.settings.show_price %}
          <div class="ai-product-glass-card-price-{{ ai_gen_id }}">
            {{ product.price | money }}
          </div>
        {% endif %}

        {% if block.settings.show_description and product.description != blank %}
          <div class="ai-product-glass-card-description-{{ ai_gen_id }}">
            {{ product.description | strip_html | truncate: 200 }}
          </div>
        {% endif %}

        {% if product.has_only_default_variant == false %}
          <div class="ai-product-glass-card-variants-{{ ai_gen_id }}">
            <label class="ai-product-glass-card-variant-label-{{ ai_gen_id }}" for="variant-select-{{ ai_gen_id }}">
              {{ block.settings.variant_label }}
            </label>
            <select
              id="variant-select-{{ ai_gen_id }}"
              class="ai-product-glass-card-variant-select-{{ ai_gen_id }}"
              name="id"
            >
              {% for variant in product.variants %}
                <option
                  value="{{ variant.id }}"
                  {% if variant == product.selected_or_first_available_variant %}selected{% endif %}
                  {% unless variant.available %}disabled{% endunless %}
                >
                  {{ variant.title }} - {{ variant.price | money }}
                  {% unless variant.available %} (Sold out){% endunless %}
                </option>
              {% endfor %}
            </select>
          </div>
        {% endif %}

        <button
          type="button"
          class="ai-product-glass-card-button-{{ ai_gen_id }}"
          data-product-id="{{ product.id }}"
        >
          {{ block.settings.button_text }}
        </button>
      </div>
    </div>
  </div>
</product-glass-card-{{ ai_gen_id }}>

<script>
  (function() {
    class ProductGlassCard{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.button = this.querySelector('.ai-product-glass-card-button-{{ ai_gen_id }}');
        this.variantSelect = this.querySelector('.ai-product-glass-card-variant-select-{{ ai_gen_id }}');
      }

      connectedCallback() {
        if (this.button) {
          this.button.addEventListener('click', this.handleAddToCart.bind(this));
        }
      }

      handleAddToCart() {
        const variantId = this.variantSelect ? this.variantSelect.value : this.button.dataset.productId;
        
        fetch('/cart/add.js', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            id: variantId,
            quantity: 1
          })
        })
        .then(response => response.json())
        .then(data => {
          window.location.href = '/cart';
        })
        .catch(error => {
          console.error('Error:', error);
        });
      }
    }

    customElements.define('product-glass-card-{{ ai_gen_id }}', ProductGlassCard{{ ai_gen_id }});
  })();
</script>

