{%- liquid
  assign section_id = section.id
  assign logo = section.settings.logo
  assign menu = section.settings.menu
  assign text_color = section.settings.text_color
  
  # Get product header color if on product page
  assign product_header_color = blank
  if template.name == 'product' and product
    if product.metafields.custom.pgc_header_color and product.metafields.custom.pgc_header_color.value != blank
      assign product_header_color = product.metafields.custom.pgc_header_color.value
    endif
  endif
-%}

{%- style -%}
  .shopify-section[data-section-id="{{ section.id }}"] {
    max-width: none !important;
    margin: 0 !important;
    padding: 0 !important;
  }

  .shopify-section[data-section-id="{{ section.id }}"] .page-width,
  .shopify-section[data-section-id="{{ section.id }}"] .page-width--narrow {
    max-width: none !important;
    margin: 0 !important;
    padding-left: 0 !important;
    padding-right: 0 !important;
  }

  .hero-header-{{ section_id }} {
    position: relative;
    width: 100%;
    max-width: 100%;
    overflow: visible;
    border-radius: 0;
    background: {{ section.settings.background_color | default: 'transparent' }};
  }


  .hero-header-{{ section_id }}__header {
    position: relative;
    inset: auto;
    width: 100%;
    z-index: 1001;
    padding: 1.5rem 0;
    background: transparent;
    border-radius: 0;
    max-width: 100%;
    overflow: visible !important;
    transition: background 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    isolation: isolate;
  }

  .hero-header-{{ section_id }}__header:has(.hero-header-{{ section_id }}__mobile-nav[aria-hidden="false"]) .hero-header-{{ section_id }}__header-pill,
  .hero-header-{{ section_id }}__header:has(.hero-header-{{ section_id }}__menu-toggle[aria-expanded="true"]) .hero-header-{{ section_id }}__header-pill {
    background: #ffffff;
    border-color: rgba(0,0,0,0.08);
  }

  .hero-header-{{ section_id }},
  .hero-header-{{ section_id }} * {
    box-sizing: border-box;
  }

  .hero-header-{{ section_id }}__header-container {
    width: 100%;
    max-width: 1680px;
    margin: 0 auto;
    padding: 0.6rem 2rem;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    gap: 1.25rem;
    flex-wrap: nowrap;
    overflow: visible !important;
    box-sizing: border-box;
  }

  @media screen and (max-width: 768px) {
    .hero-header-{{ section_id }}__header-container {
      padding: 0.5rem 1rem;
      box-sizing: border-box;
    }
  }

  .hero-header-{{ section_id }}__logo {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    margin: 0;
    padding: 0;
    margin-right: 1.25rem;
  }

  .hero-header-{{ section_id }}__logo img {
    max-height: 60px;
    width: auto;
    height: auto;
    object-fit: contain;
    transition: filter 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .hero-header-{{ section_id }}__logo a {
    display: block;
  }

  .hero-header-{{ section_id }}__header:has(.hero-header-{{ section_id }}__mobile-nav[aria-hidden="false"]) .hero-header-{{ section_id }}__logo img,
  .hero-header-{{ section_id }}__header:has(.hero-header-{{ section_id }}__menu-toggle[aria-expanded="true"]) .hero-header-{{ section_id }}__logo img {
    filter: brightness(0);
  }

  .hero-header-{{ section_id }}__nav {
    display: flex;
    justify-content: flex-start;
    min-width: 0;
    flex: 1 1 auto;
  }

  .hero-header-{{ section_id }}__menu {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 1.25rem;
    flex-wrap: nowrap;
    justify-content: flex-start;
  }

  .hero-header-{{ section_id }}__menu-item {
    margin: 0;
  }

  .hero-header-{{ section_id }}__menu-link {
    color: {{ text_color }};
    text-decoration: none;
    font-size: 16px;
    font-weight: 500;
    letter-spacing: 0.02em;
    transition: opacity 0.2s ease;
    display: inline-flex;
    align-items: center;
    white-space: nowrap;

    /* give all links small click padding */
    padding: 0.45rem 0.9rem;
    border-radius: 9999px;
  }

  .hero-header-{{ section_id }}__menu-link:hover {
    opacity: 0.7;
  }

  .hero-header-{{ section_id }}__menu-link.is-active {
    background: rgba(255,255,255,0.16);
  }

  .hero-header-{{ section_id }}__actions {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-left: auto;
    min-width: 0;
  }

  .hero-header-{{ section_id }}__header:has(.hero-header-{{ section_id }}__mobile-nav[aria-hidden="false"]) .hero-header-{{ section_id }}__icon,
  .hero-header-{{ section_id }}__header:has(.hero-header-{{ section_id }}__menu-toggle[aria-expanded="true"]) .hero-header-{{ section_id }}__icon {
    color: #000000;
  }

  .hero-header-{{ section_id }}__header:has(.hero-header-{{ section_id }}__mobile-nav[aria-hidden="false"]) .hero-header-{{ section_id }}__icon svg,
  .hero-header-{{ section_id }}__header:has(.hero-header-{{ section_id }}__menu-toggle[aria-expanded="true"]) .hero-header-{{ section_id }}__icon svg {
    fill: #000000;
    stroke: #000000;
    color: #000000;
  }

  .hero-header-{{ section_id }}__header:has(.hero-header-{{ section_id }}__mobile-nav[aria-hidden="false"]) .hero-header-{{ section_id }}__icon svg path,
  .hero-header-{{ section_id }}__header:has(.hero-header-{{ section_id }}__menu-toggle[aria-expanded="true"]) .hero-header-{{ section_id }}__icon svg path {
    fill: #000000;
    stroke: #000000;
  }

  .hero-header-{{ section_id }}__header-pill {
    display: flex;
    align-items: center;
    padding: 0.5rem 0.75rem;
    border-radius: 9999px;

    /* glass bar for menu only */
    background: rgba(0,0,0,0.35);
    border: 1px solid rgba(255,255,255,0.10);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
  }

  .hero-header-{{ section_id }}__icon {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 46px;
    height: 46px;
    border-radius: 9999px;
    background: rgba(255,255,255,0.18);
    border: 1px solid rgba(255,255,255,0.10);
    color: {{ text_color }};
    text-decoration: none;
    transition: opacity 0.2s ease, color 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .hero-header-{{ section_id }}__icon:hover {
    opacity: 0.7;
  }

  .hero-header-{{ section_id }}__icon .svg-wrapper {
    width: 22px;
    height: 22px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-header-{{ section_id }}__icon[href*="cart"] {
    width: 46px;
    height: 46px;
  }

  .hero-header-{{ section_id }}__icon[href*="cart"] .svg-wrapper {
    width: 38px;
    height: 38px;
  }

  .hero-header-{{ section_id }}__icon svg {
    width: 100%;
    height: 100%;
    transition: fill 0.4s cubic-bezier(0.4, 0, 0.2, 1), 
                stroke 0.4s cubic-bezier(0.4, 0, 0.2, 1), 
                color 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .hero-header-{{ section_id }}__cart-badge {
    position: absolute;
    top: 6px;
    right: 6px;
    background: #ffffff;
    color: #000000;
    border-radius: 50%;
    min-width: 18px;
    height: 18px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 11px;
    font-weight: 600;
    padding: 0 4px;
    line-height: 1;
  }

  /* Mobile menu toggle */
  .hero-header-{{ section_id }}__menu-toggle {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    flex-shrink: 0;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    color: {{ text_color }};
    margin-left: auto;
  }

  .hero-header-{{ section_id }}__menu-toggle-icon {
    display: flex;
    flex-direction: column;
    gap: 5px;
    width: 24px;
    height: 18px;
  }

  .hero-header-{{ section_id }}__menu-toggle-line {
    width: 100%;
    height: 2px;
    background-color: {{ text_color }};
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1), 
                opacity 0.3s cubic-bezier(0.4, 0, 0.2, 1), 
                background-color 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    transform-origin: center;
  }

  .hero-header-{{ section_id }}__header:has(.hero-header-{{ section_id }}__mobile-nav[aria-hidden="false"]) .hero-header-{{ section_id }}__menu-toggle-line,
  .hero-header-{{ section_id }}__header:has(.hero-header-{{ section_id }}__menu-toggle[aria-expanded="true"]) .hero-header-{{ section_id }}__menu-toggle-line {
    background-color: #000000;
  }

  .hero-header-{{ section_id }}__menu-toggle[aria-expanded="true"] .hero-header-{{ section_id }}__menu-toggle-icon .hero-header-{{ section_id }}__menu-toggle-line:nth-child(1) {
    transform: rotate(45deg) translate(7px, 7px);
  }

  .hero-header-{{ section_id }}__menu-toggle[aria-expanded="true"] .hero-header-{{ section_id }}__menu-toggle-icon .hero-header-{{ section_id }}__menu-toggle-line:nth-child(2) {
    opacity: 0;
  }

  .hero-header-{{ section_id }}__menu-toggle[aria-expanded="true"] .hero-header-{{ section_id }}__menu-toggle-icon .hero-header-{{ section_id }}__menu-toggle-line:nth-child(3) {
    transform: rotate(-45deg) translate(7px, -7px);
  }

  .hero-header-{{ section_id }}__mobile-nav {
    display: block !important;
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background: #ffffff;
    padding: 2rem;
    z-index: 1002;
    max-height: 0;
    overflow: hidden;
    opacity: 0;
    transform: translateY(-20px);
    transition: max-height 0.4s cubic-bezier(0.4, 0, 0.2, 1), 
                opacity 0.4s cubic-bezier(0.4, 0, 0.2, 1), 
                transform 0.4s cubic-bezier(0.4, 0, 0.2, 1), 
                padding 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    will-change: max-height, opacity, transform;
  }

  .hero-header-{{ section_id }}__mobile-nav[aria-hidden="true"] {
    max-height: 0 !important;
    padding-top: 0 !important;
    padding-bottom: 0 !important;
    opacity: 0 !important;
    transform: translateY(-20px) !important;
    visibility: hidden;
    transition: max-height 0.35s cubic-bezier(0.4, 0, 1, 1), 
                opacity 0.3s cubic-bezier(0.4, 0, 1, 1), 
                transform 0.35s cubic-bezier(0.4, 0, 1, 1), 
                padding 0.35s cubic-bezier(0.4, 0, 1, 1),
                visibility 0s linear 0.35s;
  }

  .hero-header-{{ section_id }}__mobile-nav[aria-hidden="false"],
  .hero-header-{{ section_id }}__mobile-nav.mobile-nav-open {
    max-height: 80vh !important;
    padding: 2rem !important;
    opacity: 1 !important;
    transform: translateY(0) !important;
    visibility: visible !important;
    transition: max-height 0.4s cubic-bezier(0, 0, 0.2, 1), 
                opacity 0.4s cubic-bezier(0, 0, 0.2, 1), 
                transform 0.4s cubic-bezier(0, 0, 0.2, 1), 
                padding 0.4s cubic-bezier(0, 0, 0.2, 1),
                visibility 0s linear 0s;
  }

  .hero-header-{{ section_id }}__mobile-menu {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .hero-header-{{ section_id }}__mobile-menu li {
    margin: 0;
    padding: 0;
  }

  .hero-header-{{ section_id }}__mobile-menu-link {
    color: #000000 !important;
    text-decoration: none;
    font-size: 18px;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    display: block;
    padding: 1.25rem 0;
    transition: opacity 0.3s cubic-bezier(0.4, 0, 0.2, 1), 
                transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    opacity: 1 !important;
    transform: translateX(0);
  }

  .hero-header-{{ section_id }}__mobile-nav[aria-hidden="true"] .hero-header-{{ section_id }}__mobile-menu-link {
    opacity: 0 !important;
    transform: translateX(-10px);
  }

  .hero-header-{{ section_id }}__mobile-nav[aria-hidden="false"] .hero-header-{{ section_id }}__mobile-menu-link,
  .hero-header-{{ section_id }}__mobile-nav.mobile-nav-open .hero-header-{{ section_id }}__mobile-menu-link {
    opacity: 1 !important;
    transform: translateX(0);
  }

  .hero-header-{{ section_id }}__mobile-menu-link:hover {
    opacity: 0.6 !important;
  }

  .hero-header-{{ section_id }}__mobile-actions {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    padding-top: 1.5rem;
    margin-top: 1.5rem;
    border-top: 1px solid rgba(0, 0, 0, 0.2);
  }

  .hero-header-{{ section_id }}__mobile-icon {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    color: #000000 !important;
    text-decoration: none;
    transition: opacity 0.2s ease;
    opacity: 1 !important;
  }

  .hero-header-{{ section_id }}__mobile-icon:hover {
    opacity: 0.6 !important;
  }

  .hero-header-{{ section_id }}__mobile-icon .svg-wrapper {
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-header-{{ section_id }}__mobile-icon[href*="cart"] .svg-wrapper,
  .hero-header-{{ section_id }}__mobile-cart-icon .svg-wrapper {
    width: 36px;
    height: 36px;
  }

  .hero-header-{{ section_id }}__mobile-icon svg {
    width: 100%;
    height: 100%;
    fill: #000000 !important;
    stroke: #000000 !important;
    color: #000000 !important;
  }

  .hero-header-{{ section_id }}__mobile-icon svg path,
  .hero-header-{{ section_id }}__mobile-icon svg circle,
  .hero-header-{{ section_id }}__mobile-icon svg rect,
  .hero-header-{{ section_id }}__mobile-icon svg line {
    fill: #000000 !important;
    stroke: #000000 !important;
    color: #000000 !important;
  }

  .hero-header-{{ section_id }}__mobile-icon svg {
    width: 100%;
    height: 100%;
  }

  .hero-header-{{ section_id }}__mobile-cart-badge {
    position: absolute;
    top: 0;
    right: 0;
    background: #000000;
    color: #ffffff;
    border-radius: 50%;
    min-width: 18px;
    height: 18px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 11px;
    font-weight: 600;
    padding: 0 4px;
    line-height: 1;
  }

  @media screen and (max-width: 990px) {
    .hero-header-{{ section_id }}__header {
      padding: 1rem 0;
    }

    .hero-header-{{ section_id }}__header-container {
      padding: 0 1.5rem;
    }

    .hero-header-{{ section_id }}__menu {
      gap: 1rem;
    }

    .hero-header-{{ section_id }}__menu-link {
      font-size: 14px;
    }
  }

  @media screen and (max-width: 768px) {
    .hero-header-{{ section_id }}__header {
      padding: 1rem 0;
    }

    .hero-header-{{ section_id }}__header-container {
      padding: 0 1rem;
      justify-content: flex-start;
    }

    .hero-header-{{ section_id }}__nav {
      display: none;
    }

    .hero-header-{{ section_id }}__menu-toggle {
      display: flex;
      margin-left: auto;
    }

    .hero-header-{{ section_id }}__mobile-nav[aria-hidden="false"] {
      display: block !important;
    }

    .hero-header-{{ section_id }}__logo {
      margin-right: auto;
    }

    .hero-header-{{ section_id }}__logo img {
      max-height: 50px;
    }

    .hero-header-{{ section_id }}__actions {
      display: none;
    }

    .hero-header-{{ section_id }}__header-pill {
      display: none !important;
    }
  }
{%- endstyle -%}

<div class="hero-header-{{ section_id }}">
  <!-- Header -->
  <div class="hero-header-{{ section_id }}__header">
    <div class="hero-header-{{ section_id }}__header-container">
      {%- if logo != blank -%}
        <div class="hero-header-{{ section_id }}__logo">
          <a href="{{ routes.root_url }}" aria-label="{{ shop.name }}">
            {{ logo | image_url: width: 200 | image_tag: alt: shop.name, loading: 'eager' }}
          </a>
        </div>
      {%- endif -%}

      {%- if menu != blank -%}
        <button
          class="hero-header-{{ section_id }}__menu-toggle"
          aria-label="Toggle menu"
          aria-expanded="false"
          aria-controls="mobile-nav-{{ section_id }}"
          type="button"
        >
          <span class="hero-header-{{ section_id }}__menu-toggle-icon">
            <span class="hero-header-{{ section_id }}__menu-toggle-line"></span>
            <span class="hero-header-{{ section_id }}__menu-toggle-line"></span>
            <span class="hero-header-{{ section_id }}__menu-toggle-line"></span>
          </span>
        </button>

        <div class="hero-header-{{ section_id }}__header-pill">
          <nav class="hero-header-{{ section_id }}__nav" role="navigation" aria-label="Main navigation">
            <ul class="hero-header-{{ section_id }}__menu">
              {%- for link in linklists[menu].links -%}
                <li class="hero-header-{{ section_id }}__menu-item">
                  <a
                    href="{{ link.url }}"
                    class="hero-header-{{ section_id }}__menu-link{% if link.active %} is-active{% endif %}"
                  >
                    {{ link.title }}
                  </a>
                </li>
              {%- endfor -%}
            </ul>
          </nav>
        </div>

        <nav
          class="hero-header-{{ section_id }}__mobile-nav"
          id="mobile-nav-{{ section_id }}"
          role="navigation"
          aria-label="Mobile navigation"
          aria-hidden="true"
        >
          <ul class="hero-header-{{ section_id }}__mobile-menu">
            {%- for link in linklists[menu].links -%}
              <li>
                <a href="{{ link.url }}" class="hero-header-{{ section_id }}__mobile-menu-link">
                  {{ link.title }}
                </a>
              </li>
            {%- endfor -%}
          </ul>
          
          <div class="hero-header-{{ section_id }}__mobile-actions">
            {%- if shop.customer_accounts_enabled -%}
              <a
                href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}"
                class="hero-header-{{ section_id }}__mobile-icon"
                rel="nofollow"
                aria-label="{%- if customer -%}{{ 'customer.account_fallback' | t }}{%- else -%}{{ 'customer.log_in' | t }}{%- endif -%}"
              >
                <span class="svg-wrapper">
                  {{- 'icon-account.svg' | inline_asset_content -}}
                </span>
              </a>
            {%- endif -%}

            <a
              href="{{ routes.cart_url }}"
              class="hero-header-{{ section_id }}__mobile-icon"
              aria-label="{{ 'templates.cart.cart' | t }}"
            >
              <span class="svg-wrapper">
                {%- if cart == empty -%}
                  {{- 'icon-cart-empty.svg' | inline_asset_content -}}
                {%- else -%}
                  {{- 'icon-cart.svg' | inline_asset_content -}}
                {%- endif -%}
              </span>
              {%- if cart != empty -%}
                <span class="hero-header-{{ section_id }}__mobile-cart-badge" aria-hidden="true">
                  {%- if cart.item_count < 100 -%}
                    {{ cart.item_count }}
                  {%- else -%}
                    99+
                  {%- endif -%}
                </span>
              {%- endif -%}
            </a>
          </div>
        </nav>
      {%- endif -%}

      <div class="hero-header-{{ section_id }}__actions">
        {%- if shop.customer_accounts_enabled -%}
          <a
            href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}"
            class="hero-header-{{ section_id }}__icon"
            rel="nofollow"
            aria-label="{%- if customer -%}{{ 'customer.account_fallback' | t }}{%- else -%}{{ 'customer.log_in' | t }}{%- endif -%}"
          >
            <span class="svg-wrapper">
              {{- 'icon-account.svg' | inline_asset_content -}}
            </span>
          </a>
        {%- endif -%}

        <a
          href="{{ routes.cart_url }}"
          class="hero-header-{{ section_id }}__icon"
          id="cart-icon-bubble"
          aria-label="{{ 'templates.cart.cart' | t }}"
        >
          <span class="svg-wrapper">
            {%- if cart == empty -%}
              {{- 'icon-cart-empty.svg' | inline_asset_content -}}
            {%- else -%}
              {{- 'icon-cart.svg' | inline_asset_content -}}
            {%- endif -%}
          </span>
          {%- if cart != empty -%}
            <span class="hero-header-{{ section_id }}__cart-badge" aria-hidden="true">
              {%- if cart.item_count < 100 -%}
                {{ cart.item_count }}
              {%- else -%}
                99+
              {%- endif -%}
            </span>
          {%- endif -%}
        </a>
      </div>
    </div>
  </div>

  {%- comment -%} Build product color mapping from blocks {%- endcomment -%}
  <script>
    (function () {
      window.productHeaderColors = window.productHeaderColors || {};
      {% assign product_color_blocks = section.blocks | where: 'type', 'product_color' %}

      {% for block in product_color_blocks %}
        {% assign product_handle = blank %}

        {%- comment -%}
        block.settings.product might be:
        - a product object (has .handle)
        - OR a handle string
        {%- endcomment -%}
        {% if block.settings.product != blank %}
          {% if block.settings.product.handle != blank %}
            {% assign product_handle = block.settings.product.handle %}
          {% else %}
            {% assign product_handle = block.settings.product %}
          {% endif %}
        {% endif %}

        {% if product_handle != blank and block.settings.color != blank %}
          window.productHeaderColors[{{ product_handle | json }}] = {{ block.settings.color | json }};
          console.log('[Hero Header] product color map:', {{ product_handle | json }}, '->', {{ block.settings.color | json }});
        {% endif %}
      {% endfor %}

      console.log('[Hero Header] productHeaderColors =', window.productHeaderColors);
    })();
  </script>

</div>

<script>
  (function() {
    const sectionId = '{{ section_id }}';
    const sectionEl = document.querySelector('.hero-header-' + sectionId);
    if (!sectionEl) return;
    
    function initMobileMenu() {
      // Try multiple selector strategies
      let menuToggle = document.querySelector('[id="mobile-nav-' + sectionId + '"]')?.previousElementSibling?.querySelector('[class*="__menu-toggle"]');
      
      if (!menuToggle) {
        menuToggle = document.querySelector('[aria-controls="mobile-nav-' + sectionId + '"]');
      }
      
      if (!menuToggle) {
        menuToggle = document.querySelector('[class*="hero-header-"][class*="__menu-toggle"]');
      }
      
      if (!menuToggle) {
        console.error('Hero header: Menu toggle button not found');
        return;
      }
      
      const mobileNavId = menuToggle.getAttribute('aria-controls');
      if (!mobileNavId) {
        console.error('Hero header: Mobile nav ID not found');
        return;
      }
      
      const mobileNav = document.getElementById(mobileNavId);
      if (!mobileNav) {
        console.error('Hero header: Mobile nav element not found');
        return;
      }

      // Ensure mobile nav starts hidden
      mobileNav.setAttribute('aria-hidden', 'true');
      mobileNav.classList.remove('mobile-nav-open');

      function toggleMenu() {
        const isExpanded = menuToggle.getAttribute('aria-expanded') === 'true';
        const newExpanded = !isExpanded;
        
        menuToggle.setAttribute('aria-expanded', newExpanded ? 'true' : 'false');
        mobileNav.setAttribute('aria-hidden', newExpanded ? 'false' : 'true');

        if (newExpanded) {
          mobileNav.classList.add('mobile-nav-open');
        } else {
          mobileNav.classList.remove('mobile-nav-open');
        }
      }

      menuToggle.addEventListener('click', function(e) {
        e.stopPropagation();
        e.preventDefault();
        toggleMenu();
      });

      // Close menu when clicking on a link
      const mobileLinks = mobileNav.querySelectorAll('[class*="__mobile-menu-link"], [class*="__mobile-icon"]');
      mobileLinks.forEach(function(link) {
        link.addEventListener('click', function() {
          menuToggle.setAttribute('aria-expanded', 'false');
          mobileNav.setAttribute('aria-hidden', 'true');
          mobileNav.classList.remove('mobile-nav-open');
        });
      });

      // Close menu when clicking outside
      document.addEventListener('click', function(event) {
        if (mobileNav.getAttribute('aria-hidden') === 'false' && 
            !menuToggle.contains(event.target) && 
            !mobileNav.contains(event.target)) {
          menuToggle.setAttribute('aria-expanded', 'false');
          mobileNav.setAttribute('aria-hidden', 'true');
          mobileNav.classList.remove('mobile-nav-open');
        }
      });
    }

    // Wait for DOM to be ready
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initMobileMenu);
    } else {
      // Small delay to ensure all elements are rendered
      setTimeout(initMobileMenu, 100);
    }


    // Update hero header background color based on product
    (function() {
      // Function to apply color to the whole page (body and header)
      function applyHeroHeaderColor(color) {
        if (!color) return;

        // Apply to this header section
        sectionEl.style.setProperty('background-color', color, 'important');
        sectionEl.style.setProperty('background', color, 'important');

        const headerElement = sectionEl.querySelector('.hero-header-' + sectionId + '__header');
        if (headerElement) {
          headerElement.style.setProperty('background-color', color, 'important');
          headerElement.style.setProperty('background', color, 'important');
        }

        const headerContainer = sectionEl.querySelector('.hero-header-' + sectionId + '__header-container');
        if (headerContainer) {
          headerContainer.style.setProperty('background-color', color, 'important');
          headerContainer.style.setProperty('background', color, 'important');
        }

        // OPTIONAL: also color the page background (removes white strip above)
        document.documentElement.style.setProperty('background-color', color, 'important');
        document.body.style.setProperty('background-color', color, 'important');
      }
      
      function updateHeroHeaderBackground() {
        // Only apply on product pages (not home page)
        {% if template.name == 'product' and product %}
          const productHandle = {{ product.handle | json }};
          const mapped = window.productHeaderColors && window.productHeaderColors[productHandle];
          console.log('[Hero Header] handle:', productHandle, 'mapped color:', mapped);

          if (mapped) {
            applyHeroHeaderColor(mapped);
            return;
          }

          // Fallback: metafield if present
          {% if product.metafields.custom.pgc_header_color and product.metafields.custom.pgc_header_color.value != blank %}
            const mf = {{ product.metafields.custom.pgc_header_color.value | json }};
            if (mf) { applyHeroHeaderColor(mf); return; }
          {% endif %}

          // Fallback: section setting
          const fallback = {{ section.settings.background_color | default: 'transparent' | json }};
          if (fallback && fallback !== 'transparent') applyHeroHeaderColor(fallback);
        {% else %}
          // Not a product page - use section default or transparent
          {% unless is_home_page %}
            const fallback = {{ section.settings.background_color | default: 'transparent' | json }};
            if (fallback && fallback !== 'transparent') applyHeroHeaderColor(fallback);
          {% endunless %}
        {% endif %}
      }
      
      // Run on page load
      let hasRun = false;
      function runOnce() {
        if (hasRun) return;
        hasRun = true;
        
        // Ensure productHeaderColors is initialized
        if (typeof window.productHeaderColors === 'undefined') {
          window.productHeaderColors = {};
        }
        
        updateHeroHeaderBackground();
      }
      
      // Wait for DOM and ensure mapping is available
      function initHeaderColor() {
        // Small delay to ensure the mapping script has run
        setTimeout(function() {
          runOnce();
        }, 100);
      }
      
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initHeaderColor);
      } else {
        initHeaderColor();
      }
      
      // Also run after a longer delay to ensure everything is loaded
      setTimeout(function() {
        if (!hasRun) {
          runOnce();
        } else {
          // Re-check in case mapping was added dynamically
          updateHeroHeaderBackground();
        }
      }, 1000);

      // Theme Editor: re-run when section/block changes
      document.addEventListener('shopify:section:load', function(e) {
        if (e.detail && e.detail.sectionId === sectionId) updateHeroHeaderBackground();
      });
      document.addEventListener('shopify:section:select', function(e) {
        if (e.detail && e.detail.sectionId === sectionId) updateHeroHeaderBackground();
      });
      document.addEventListener('shopify:block:select', function(e) {
        if (e.detail && e.detail.sectionId === sectionId) updateHeroHeaderBackground();
      });
    })();
  })();
</script>

