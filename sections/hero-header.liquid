{%- liquid
  assign section_id = section.id
  assign logo = section.settings.logo
  assign menu = section.settings.menu
  assign text_color = section.settings.text_color
  assign is_home_page = false
  if template.name == 'index'
    assign is_home_page = true
  endif
  assign autoplay_enabled = section.settings.autoplay_enabled
  assign autoplay_speed = section.settings.autoplay_speed | default: 5000
  assign slide_height = section.settings.slide_height | default: 'large'
  assign slides = section.blocks | where: 'type', 'slide'
  assign first_slide_image = slides.first.settings.image
-%}

{%- style -%}
  .shopify-section[data-section-id="{{ section.id }}"] {
    max-width: none !important;
    margin: 0 !important;
    padding: 0 !important;
  }

  .shopify-section[data-section-id="{{ section.id }}"] .page-width,
  .shopify-section[data-section-id="{{ section.id }}"] .page-width--narrow {
    max-width: none !important;
    margin: 0 !important;
    padding-left: 0 !important;
    padding-right: 0 !important;
  }

  .hero-header-{{ section_id }} {
    position: relative;
    width: 100%;
    max-width: 100%;
    overflow: visible;
    border-radius: 0;
    {%- unless is_home_page -%}
      background: {{ section.settings.background_color | default: 'transparent' }};
    {%- else -%}
      background: none;
    {%- endunless -%}
  }

  {%- if is_home_page and first_slide_image != blank -%}
    .hero-header-{{ section_id }}__slideshow::before {
      content: '';
      display: block;
      padding-bottom: {{ 1 | divided_by: first_slide_image.aspect_ratio | times: 100 }}%;
    }
  {%- endif -%}

  .hero-header-{{ section_id }}__slideshow {
    position: relative;
    width: 100%;
    overflow: hidden;
    min-height: 0;
  }

  .hero-header-{{ section_id }}__slides {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
  }

  .hero-header-{{ section_id }}__slide {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: opacity 1s ease-in-out;
    z-index: 1;
  }

  .hero-header-{{ section_id }}__slide.active {
    opacity: 1;
    z-index: 2;
  }

  .hero-header-{{ section_id }}__slide-image {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 120%;
    height: 120%;
    min-width: 120%;
    min-height: 120%;
    max-width: none;
    max-height: none;
    object-fit: cover;
    object-position: center;
    display: block;
    transform: translate(-50%, -50%);
  }

  .hero-header-{{ section_id }}__slide-content {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 3;
  }

  .hero-header-{{ section_id }}__button {
    position: absolute;
    padding: 1rem 2rem;
    background: {{ section.settings.button_bg_color | default: '#ffffff' }};
    color: {{ section.settings.button_text_color | default: '#000000' }};
    text-decoration: none;
    border-radius: 8px;
    font-size: 16px;
    font-weight: 600;
    transition: transform 0.2s ease, opacity 0.2s ease;
    border: none;
    cursor: pointer;
    z-index: 4;
  }

  .hero-header-{{ section_id }}__button:hover {
    transform: translateY(-2px);
    opacity: 0.9;
  }

  .hero-header-{{ section_id }}__indicators {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 0.5rem;
    z-index: 5;
  }

  .hero-header-{{ section_id }}__indicator {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.5);
    border: none;
    cursor: pointer;
    transition: background 0.3s ease;
    padding: 0;
  }

  .hero-header-{{ section_id }}__indicator.active {
    background: {{ text_color }};
  }

  .hero-header-{{ section_id }}__header {
    position: {% if is_home_page %}absolute{% else %}relative{% endif %};
    inset: {% if is_home_page %}0 auto auto 0{% else %}auto{% endif %};
    width: 100%;
    z-index: 1001;
    padding: 1.5rem 0;
    background: transparent;
    border-radius: 0;
    max-width: 100%;
    overflow: visible;
    transition: background 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .hero-header-{{ section_id }}__header:has(.hero-header-{{ section_id }}__mobile-nav[aria-hidden="false"]),
  .hero-header-{{ section_id }}__header:has(.hero-header-{{ section_id }}__menu-toggle[aria-expanded="true"]) {
    background: #ffffff;
  }

  .hero-header-{{ section_id }}__header-container {
    position: relative;
    width: 100%;
    max-width: 100%;
    margin: 0;
    padding: 0 2rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
    overflow: visible;
    z-index: 1001;
  }

  .hero-header-{{ section_id }}__logo {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    order: 1;
    margin-left: 0;
    padding-left: 0;
  }

  .hero-header-{{ section_id }}__logo img {
    max-height: 60px;
    width: auto;
    height: auto;
    object-fit: contain;
    transition: filter 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .hero-header-{{ section_id }}__logo a {
    display: block;
  }

  .hero-header-{{ section_id }}__header:has(.hero-header-{{ section_id }}__mobile-nav[aria-hidden="false"]) .hero-header-{{ section_id }}__logo img,
  .hero-header-{{ section_id }}__header:has(.hero-header-{{ section_id }}__menu-toggle[aria-expanded="true"]) .hero-header-{{ section_id }}__logo img {
    filter: brightness(0);
  }

  .hero-header-{{ section_id }}__nav {
    flex: 1;
    display: flex;
    justify-content: center;
    order: 2;
  }

  .hero-header-{{ section_id }}__menu {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 2rem;
    flex-wrap: wrap;
    justify-content: center;
  }

  .hero-header-{{ section_id }}__menu-item {
    margin: 0;
  }

  .hero-header-{{ section_id }}__menu-link {
    color: {{ text_color }};
    text-decoration: none;
    font-size: 16px;
    font-weight: 500;
    letter-spacing: 0.02em;
    transition: opacity 0.2s ease;
    display: block;
  }

  .hero-header-{{ section_id }}__menu-link:hover {
    opacity: 0.7;
  }

  .hero-header-{{ section_id }}__actions {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    gap: 1rem;
    order: 3;
    margin-right: 0;
    padding-right: 0;
    min-width: 0;
  }

  .hero-header-{{ section_id }}__header:has(.hero-header-{{ section_id }}__mobile-nav[aria-hidden="false"]) .hero-header-{{ section_id }}__icon,
  .hero-header-{{ section_id }}__header:has(.hero-header-{{ section_id }}__menu-toggle[aria-expanded="true"]) .hero-header-{{ section_id }}__icon {
    color: #000000;
  }

  .hero-header-{{ section_id }}__header:has(.hero-header-{{ section_id }}__mobile-nav[aria-hidden="false"]) .hero-header-{{ section_id }}__icon svg,
  .hero-header-{{ section_id }}__header:has(.hero-header-{{ section_id }}__menu-toggle[aria-expanded="true"]) .hero-header-{{ section_id }}__icon svg {
    fill: #000000;
    stroke: #000000;
    color: #000000;
  }

  .hero-header-{{ section_id }}__header:has(.hero-header-{{ section_id }}__mobile-nav[aria-hidden="false"]) .hero-header-{{ section_id }}__icon svg path,
  .hero-header-{{ section_id }}__header:has(.hero-header-{{ section_id }}__menu-toggle[aria-expanded="true"]) .hero-header-{{ section_id }}__icon svg path {
    fill: #000000;
    stroke: #000000;
  }

  .hero-header-{{ section_id }}__icon {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    color: {{ text_color }};
    text-decoration: none;
    transition: opacity 0.2s ease, color 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .hero-header-{{ section_id }}__icon:hover {
    opacity: 0.7;
  }

  .hero-header-{{ section_id }}__icon .svg-wrapper {
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-header-{{ section_id }}__icon#cart-icon-bubble {
    width: 72px;
    height: 72px;
    max-width: 72px;
    overflow: hidden;
  }

  .hero-header-{{ section_id }}__icon#cart-icon-bubble .svg-wrapper {
    width: 40px;
    height: 40px;
  }

  .hero-header-{{ section_id }}__icon svg {
    width: 100%;
    height: 100%;
    transition: fill 0.4s cubic-bezier(0.4, 0, 0.2, 1), 
                stroke 0.4s cubic-bezier(0.4, 0, 0.2, 1), 
                color 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .hero-header-{{ section_id }}__cart-badge {
    position: absolute;
    top: 6px;
    right: 6px;
    background: {{ text_color }};
    color: #000;
    border-radius: 50%;
    min-width: 18px;
    height: 18px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 11px;
    font-weight: 600;
    padding: 0 4px;
    line-height: 1;
  }

  /* Mobile menu toggle */
  .hero-header-{{ section_id }}__menu-toggle {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    flex-shrink: 0;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    color: {{ text_color }};
    order: 2;
  }

  .hero-header-{{ section_id }}__menu-toggle-icon {
    display: flex;
    flex-direction: column;
    gap: 5px;
    width: 24px;
    height: 18px;
  }

  .hero-header-{{ section_id }}__menu-toggle-line {
    width: 100%;
    height: 2px;
    background-color: {{ text_color }};
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1), 
                opacity 0.3s cubic-bezier(0.4, 0, 0.2, 1), 
                background-color 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    transform-origin: center;
  }

  .hero-header-{{ section_id }}__header:has(.hero-header-{{ section_id }}__mobile-nav[aria-hidden="false"]) .hero-header-{{ section_id }}__menu-toggle-line,
  .hero-header-{{ section_id }}__header:has(.hero-header-{{ section_id }}__menu-toggle[aria-expanded="true"]) .hero-header-{{ section_id }}__menu-toggle-line {
    background-color: #000000;
  }

  .hero-header-{{ section_id }}__menu-toggle[aria-expanded="true"] .hero-header-{{ section_id }}__menu-toggle-icon .hero-header-{{ section_id }}__menu-toggle-line:nth-child(1) {
    transform: rotate(45deg) translate(7px, 7px);
  }

  .hero-header-{{ section_id }}__menu-toggle[aria-expanded="true"] .hero-header-{{ section_id }}__menu-toggle-icon .hero-header-{{ section_id }}__menu-toggle-line:nth-child(2) {
    opacity: 0;
  }

  .hero-header-{{ section_id }}__menu-toggle[aria-expanded="true"] .hero-header-{{ section_id }}__menu-toggle-icon .hero-header-{{ section_id }}__menu-toggle-line:nth-child(3) {
    transform: rotate(-45deg) translate(7px, -7px);
  }

  .hero-header-{{ section_id }}__mobile-nav {
    display: block !important;
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background: #ffffff;
    padding: 2rem;
    z-index: 1002;
    max-height: 0;
    overflow: hidden;
    opacity: 0;
    transform: translateY(-20px);
    transition: max-height 0.4s cubic-bezier(0.4, 0, 0.2, 1), 
                opacity 0.4s cubic-bezier(0.4, 0, 0.2, 1), 
                transform 0.4s cubic-bezier(0.4, 0, 0.2, 1), 
                padding 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    will-change: max-height, opacity, transform;
  }

  .hero-header-{{ section_id }}__mobile-nav[aria-hidden="true"] {
    max-height: 0 !important;
    padding-top: 0 !important;
    padding-bottom: 0 !important;
    opacity: 0 !important;
    transform: translateY(-20px) !important;
    visibility: hidden;
    transition: max-height 0.35s cubic-bezier(0.4, 0, 1, 1), 
                opacity 0.3s cubic-bezier(0.4, 0, 1, 1), 
                transform 0.35s cubic-bezier(0.4, 0, 1, 1), 
                padding 0.35s cubic-bezier(0.4, 0, 1, 1),
                visibility 0s linear 0.35s;
  }

  .hero-header-{{ section_id }}__mobile-nav[aria-hidden="false"],
  .hero-header-{{ section_id }}__mobile-nav.mobile-nav-open {
    max-height: 80vh !important;
    padding: 2rem !important;
    opacity: 1 !important;
    transform: translateY(0) !important;
    visibility: visible !important;
    transition: max-height 0.4s cubic-bezier(0, 0, 0.2, 1), 
                opacity 0.4s cubic-bezier(0, 0, 0.2, 1), 
                transform 0.4s cubic-bezier(0, 0, 0.2, 1), 
                padding 0.4s cubic-bezier(0, 0, 0.2, 1),
                visibility 0s linear 0s;
  }

  .hero-header-{{ section_id }}__mobile-menu {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .hero-header-{{ section_id }}__mobile-menu li {
    margin: 0;
    padding: 0;
  }

  .hero-header-{{ section_id }}__mobile-menu-link {
    color: #000000 !important;
    text-decoration: none;
    font-size: 18px;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    display: block;
    padding: 1.25rem 0;
    transition: opacity 0.3s cubic-bezier(0.4, 0, 0.2, 1), 
                transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    opacity: 1 !important;
    transform: translateX(0);
  }

  .hero-header-{{ section_id }}__mobile-nav[aria-hidden="true"] .hero-header-{{ section_id }}__mobile-menu-link {
    opacity: 0 !important;
    transform: translateX(-10px);
  }

  .hero-header-{{ section_id }}__mobile-nav[aria-hidden="false"] .hero-header-{{ section_id }}__mobile-menu-link,
  .hero-header-{{ section_id }}__mobile-nav.mobile-nav-open .hero-header-{{ section_id }}__mobile-menu-link {
    opacity: 1 !important;
    transform: translateX(0);
  }

  .hero-header-{{ section_id }}__mobile-menu-link:hover {
    opacity: 0.6 !important;
  }

  .hero-header-{{ section_id }}__mobile-actions {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    padding-top: 1.5rem;
    margin-top: 1.5rem;
    border-top: 1px solid rgba(0, 0, 0, 0.2);
  }

  .hero-header-{{ section_id }}__mobile-icon {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    color: #000000 !important;
    text-decoration: none;
    transition: opacity 0.2s ease;
    opacity: 1 !important;
  }

  .hero-header-{{ section_id }}__mobile-icon:hover {
    opacity: 0.6 !important;
  }

  .hero-header-{{ section_id }}__mobile-icon .svg-wrapper {
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-header-{{ section_id }}__mobile-icon svg {
    width: 100%;
    height: 100%;
    fill: #000000 !important;
    stroke: #000000 !important;
    color: #000000 !important;
  }

  .hero-header-{{ section_id }}__mobile-icon svg path,
  .hero-header-{{ section_id }}__mobile-icon svg circle,
  .hero-header-{{ section_id }}__mobile-icon svg rect,
  .hero-header-{{ section_id }}__mobile-icon svg line {
    fill: #000000 !important;
    stroke: #000000 !important;
    color: #000000 !important;
  }

  .hero-header-{{ section_id }}__mobile-icon svg {
    width: 100%;
    height: 100%;
  }

  .hero-header-{{ section_id }}__mobile-cart-badge {
    position: absolute;
    top: 0;
    right: 0;
    background: #000000;
    color: #ffffff;
    border-radius: 50%;
    min-width: 18px;
    height: 18px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 11px;
    font-weight: 600;
    padding: 0 4px;
    line-height: 1;
  }

  @media screen and (max-width: 990px) {
    .hero-header-{{ section_id }}__header {
      padding: 1rem 0;
    }

    .hero-header-{{ section_id }}__header-container {
      padding: 0 1.5rem;
    }

    .hero-header-{{ section_id }}__menu {
      gap: 1rem;
    }

    .hero-header-{{ section_id }}__menu-link {
      font-size: 14px;
    }
  }

  @media screen and (max-width: 768px) {
    .hero-header-{{ section_id }}__header {
      padding: 1rem 0;
    }

    .hero-header-{{ section_id }}__header-container {
      padding: 0 1rem;
      justify-content: flex-start;
    }

    .hero-header-{{ section_id }}__nav {
      display: none;
    }

    .hero-header-{{ section_id }}__menu-toggle {
      display: flex;
      margin-left: auto;
    }

    .hero-header-{{ section_id }}__mobile-nav[aria-hidden="false"] {
      display: block !important;
    }

    .hero-header-{{ section_id }}__logo {
      margin-right: auto;
    }

    .hero-header-{{ section_id }}__logo img {
      max-height: 50px;
    }

    .hero-header-{{ section_id }}__actions {
      display: none;
    }
  }
{%- endstyle -%}

<div class="hero-header-{{ section_id }}">
  <!-- Header -->
  <div class="hero-header-{{ section_id }}__header">
    <div class="hero-header-{{ section_id }}__header-container">
      {%- if logo != blank -%}
        <div class="hero-header-{{ section_id }}__logo">
          <a href="{{ routes.root_url }}" aria-label="{{ shop.name }}">
            {{ logo | image_url: width: 200 | image_tag: alt: shop.name, loading: 'eager' }}
          </a>
        </div>
      {%- endif -%}

      {%- if menu != blank -%}
        <button
          class="hero-header-{{ section_id }}__menu-toggle"
          aria-label="Toggle menu"
          aria-expanded="false"
          aria-controls="mobile-nav-{{ section_id }}"
          type="button"
        >
          <span class="hero-header-{{ section_id }}__menu-toggle-icon">
            <span class="hero-header-{{ section_id }}__menu-toggle-line"></span>
            <span class="hero-header-{{ section_id }}__menu-toggle-line"></span>
            <span class="hero-header-{{ section_id }}__menu-toggle-line"></span>
          </span>
        </button>

        <nav class="hero-header-{{ section_id }}__nav" role="navigation" aria-label="Main navigation">
          <ul class="hero-header-{{ section_id }}__menu">
            {%- for link in linklists[menu].links -%}
              <li class="hero-header-{{ section_id }}__menu-item">
                <a href="{{ link.url }}" class="hero-header-{{ section_id }}__menu-link">
                  {{ link.title }}
                </a>
              </li>
            {%- endfor -%}
          </ul>
        </nav>

        <nav
          class="hero-header-{{ section_id }}__mobile-nav"
          id="mobile-nav-{{ section_id }}"
          role="navigation"
          aria-label="Mobile navigation"
          aria-hidden="true"
        >
          <ul class="hero-header-{{ section_id }}__mobile-menu">
            {%- for link in linklists[menu].links -%}
              <li>
                <a href="{{ link.url }}" class="hero-header-{{ section_id }}__mobile-menu-link">
                  {{ link.title }}
                </a>
              </li>
            {%- endfor -%}
          </ul>
          
          <div class="hero-header-{{ section_id }}__mobile-actions">
            {%- if shop.customer_accounts_enabled -%}
              <a
                href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}"
                class="hero-header-{{ section_id }}__mobile-icon"
                rel="nofollow"
                aria-label="{%- if customer -%}{{ 'customer.account_fallback' | t }}{%- else -%}{{ 'customer.log_in' | t }}{%- endif -%}"
              >
                <span class="svg-wrapper">
                  {{- 'icon-account.svg' | inline_asset_content -}}
                </span>
              </a>
            {%- endif -%}

            <a
              href="{{ routes.cart_url }}"
              class="hero-header-{{ section_id }}__mobile-icon"
              aria-label="{{ 'templates.cart.cart' | t }}"
            >
              <span class="svg-wrapper">
                {%- if cart == empty -%}
                  {{- 'icon-cart-empty.svg' | inline_asset_content -}}
                {%- else -%}
                  {{- 'icon-cart.svg' | inline_asset_content -}}
                {%- endif -%}
              </span>
              {%- if cart != empty -%}
                <span class="hero-header-{{ section_id }}__mobile-cart-badge" aria-hidden="true">
                  {%- if cart.item_count < 100 -%}
                    {{ cart.item_count }}
                  {%- else -%}
                    99+
                  {%- endif -%}
                </span>
              {%- endif -%}
            </a>
          </div>
        </nav>
      {%- endif -%}

      <div class="hero-header-{{ section_id }}__actions">
        {%- if shop.customer_accounts_enabled -%}
          <a
            href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}"
            class="hero-header-{{ section_id }}__icon"
            rel="nofollow"
            aria-label="{%- if customer -%}{{ 'customer.account_fallback' | t }}{%- else -%}{{ 'customer.log_in' | t }}{%- endif -%}"
          >
            <span class="svg-wrapper">
              {{- 'icon-account.svg' | inline_asset_content -}}
            </span>
          </a>
        {%- endif -%}

        <a
          href="{{ routes.cart_url }}"
          class="hero-header-{{ section_id }}__icon"
          id="cart-icon-bubble"
          aria-label="{{ 'templates.cart.cart' | t }}"
        >
          <span class="svg-wrapper">
            {%- if cart == empty -%}
              {{- 'icon-cart-empty.svg' | inline_asset_content -}}
            {%- else -%}
              {{- 'icon-cart.svg' | inline_asset_content -}}
            {%- endif -%}
          </span>
          {%- if cart != empty -%}
            <span class="hero-header-{{ section_id }}__cart-badge" aria-hidden="true">
              {%- if cart.item_count < 100 -%}
                {{ cart.item_count }}
              {%- else -%}
                99+
              {%- endif -%}
            </span>
          {%- endif -%}
        </a>
      </div>
    </div>
  </div>

  {%- if is_home_page and slides.size > 0 -%}
    <!-- Slideshow (only on home page) -->
    <div class="hero-header-{{ section_id }}__slideshow">
      <div class="hero-header-{{ section_id }}__slides" id="slides-{{ section_id }}">
        {%- for block in slides -%}
          {%- assign slide_image = block.settings.image -%}
          {%- assign button_text = block.settings.button_text -%}
          {%- assign button_link = block.settings.button_link -%}
          {%- assign button_position = block.settings.button_position | default: 'center' -%}
          {%- assign button_horizontal = block.settings.button_horizontal | default: 50 -%}
          {%- assign button_vertical = block.settings.button_vertical | default: 50 -%}

          <div
            class="hero-header-{{ section_id }}__slide{% if forloop.first %} active{% endif %}"
            data-slide-index="{{ forloop.index0 }}"
            {{ block.shopify_attributes }}
          >
            {%- if slide_image != blank -%}
              <img
                class="hero-header-{{ section_id }}__slide-image"
                src="{{ slide_image | image_url: width: 2400 }}"
                alt="{{ slide_image.alt | escape }}"
                loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
                width="{{ slide_image.width }}"
                height="{{ slide_image.height }}"
              >
            {%- endif -%}

            <div class="hero-header-{{ section_id }}__slide-content">
              {%- if button_text != blank and button_link != blank -%}
                <a
                  href="{{ button_link }}"
                  class="hero-header-{{ section_id }}__button"
                  style="
                    {%- if button_position == 'custom' -%}
                      left: {{ button_horizontal }}%;
                      top: {{ button_vertical }}%;
                      transform: translate(-50%, -50%);
                    {%- elsif button_position == 'top-left' -%}
                      top: 20%;
                      left: 20%;
                      transform: translate(-50%, -50%);
                    {%- elsif button_position == 'top-center' -%}
                      top: 20%;
                      left: 50%;
                      transform: translate(-50%, -50%);
                    {%- elsif button_position == 'top-right' -%}
                      top: 20%;
                      right: 20%;
                      transform: translate(50%, -50%);
                    {%- elsif button_position == 'center-left' -%}
                      top: 50%;
                      left: 20%;
                      transform: translate(-50%, -50%);
                    {%- elsif button_position == 'center-right' -%}
                      top: 50%;
                      right: 20%;
                      transform: translate(50%, -50%);
                    {%- elsif button_position == 'bottom-left' -%}
                      bottom: 20%;
                      left: 20%;
                      transform: translate(-50%, 50%);
                    {%- elsif button_position == 'bottom-center' -%}
                      bottom: 20%;
                      left: 50%;
                      transform: translate(-50%, 50%);
                    {%- elsif button_position == 'bottom-right' -%}
                      bottom: 20%;
                      right: 20%;
                      transform: translate(50%, 50%);
                    {%- else -%}
                      top: 50%;
                      left: 50%;
                      transform: translate(-50%, -50%);
                    {%- endif -%}
                  "
                >
                  {{ button_text }}
                </a>
              {%- endif -%}
            </div>
          </div>
        {%- endfor -%}
      </div>

      {%- if slides.size > 1 -%}
        <div class="hero-header-{{ section_id }}__indicators">
          {%- for block in slides -%}
            <button
              type="button"
              class="hero-header-{{ section_id }}__indicator{% if forloop.first %} active{% endif %}"
              data-slide-index="{{ forloop.index0 }}"
              aria-label="Go to slide {{ forloop.index }}"
            ></button>
          {%- endfor -%}
        </div>
      {%- endif -%}
    </div>
  {%- endif -%}
</div>

<script>
  (function() {
    const sectionId = '{{ section_id }}';
    
    function initMobileMenu() {
      // Try multiple selector strategies
      let menuToggle = document.querySelector('[id="mobile-nav-' + sectionId + '"]')?.previousElementSibling?.querySelector('[class*="__menu-toggle"]');
      
      if (!menuToggle) {
        menuToggle = document.querySelector('[aria-controls="mobile-nav-' + sectionId + '"]');
      }
      
      if (!menuToggle) {
        menuToggle = document.querySelector('[class*="hero-header-"][class*="__menu-toggle"]');
      }
      
      if (!menuToggle) {
        console.error('Hero header: Menu toggle button not found');
        return;
      }
      
      const mobileNavId = menuToggle.getAttribute('aria-controls');
      if (!mobileNavId) {
        console.error('Hero header: Mobile nav ID not found');
        return;
      }
      
      const mobileNav = document.getElementById(mobileNavId);
      if (!mobileNav) {
        console.error('Hero header: Mobile nav element not found');
        return;
      }

      // Ensure mobile nav starts hidden
      mobileNav.setAttribute('aria-hidden', 'true');
      mobileNav.classList.remove('mobile-nav-open');

      function toggleMenu() {
        const isExpanded = menuToggle.getAttribute('aria-expanded') === 'true';
        const newExpanded = !isExpanded;
        
        menuToggle.setAttribute('aria-expanded', newExpanded ? 'true' : 'false');
        mobileNav.setAttribute('aria-hidden', newExpanded ? 'false' : 'true');

        if (newExpanded) {
          mobileNav.classList.add('mobile-nav-open');
        } else {
          mobileNav.classList.remove('mobile-nav-open');
        }
      }

      menuToggle.addEventListener('click', function(e) {
        e.stopPropagation();
        e.preventDefault();
        toggleMenu();
      });

      // Close menu when clicking on a link
      const mobileLinks = mobileNav.querySelectorAll('[class*="__mobile-menu-link"], [class*="__mobile-icon"]');
      mobileLinks.forEach(function(link) {
        link.addEventListener('click', function() {
          menuToggle.setAttribute('aria-expanded', 'false');
          mobileNav.setAttribute('aria-hidden', 'true');
          mobileNav.classList.remove('mobile-nav-open');
        });
      });

      // Close menu when clicking outside
      document.addEventListener('click', function(event) {
        if (mobileNav.getAttribute('aria-hidden') === 'false' && 
            !menuToggle.contains(event.target) && 
            !mobileNav.contains(event.target)) {
          menuToggle.setAttribute('aria-expanded', 'false');
          mobileNav.setAttribute('aria-hidden', 'true');
          mobileNav.classList.remove('mobile-nav-open');
        }
      });
    }

    // Wait for DOM to be ready
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initMobileMenu);
    } else {
      // Small delay to ensure all elements are rendered
      setTimeout(initMobileMenu, 100);
    }

    {%- if is_home_page -%}
    // Slideshow functionality (only on home page)
    const slides = section.querySelectorAll('[class*="__slide"]');
    const indicators = section.querySelectorAll('[class*="__indicator"]');

    if (slides.length <= 1) return;

    let currentSlide = 0;
    let autoplayInterval = null;

    function showSlide(index) {
      slides.forEach((slide, i) => {
        if (i === index) {
          slide.classList.add('active');
        } else {
          slide.classList.remove('active');
        }
      });

      indicators.forEach((indicator, i) => {
        if (i === index) {
          indicator.classList.add('active');
        } else {
          indicator.classList.remove('active');
        }
      });

      currentSlide = index;
    }

    function nextSlide() {
      const next = (currentSlide + 1) % slides.length;
      showSlide(next);
    }

    function goToSlide(index) {
      if (index >= 0 && index < slides.length) {
        showSlide(index);
      }
    }

    // Indicator clicks
    indicators.forEach((indicator, index) => {
      indicator.addEventListener('click', () => {
        goToSlide(index);
        resetAutoplay();
      });
    });

    // Auto-rotate
    function startAutoplay() {
      {% if autoplay_enabled %}
        autoplayInterval = setInterval(nextSlide, {{ autoplay_speed }});
      {% endif %}
    }

    function stopAutoplay() {
      if (autoplayInterval) {
        clearInterval(autoplayInterval);
        autoplayInterval = null;
      }
    }

    function resetAutoplay() {
      stopAutoplay();
      startAutoplay();
    }

    // Pause on hover
    const slideshow = section.querySelector('.hero-header-{{ section_id }}__slideshow');
    if (slideshow) {
      slideshow.addEventListener('mouseenter', stopAutoplay);
      slideshow.addEventListener('mouseleave', startAutoplay);
    }

    startAutoplay();
    {%- endif -%}
  })();
</script>

