<script>
  (function() {
    const sectionId = '{{ section_id }}';
    const sectionEl = document.querySelector('.hero-slideshow-' + sectionId);
    if (!sectionEl) return;
    
    // Mobile menu initialization - ALWAYS runs regardless of slideshow
    function initMobileMenu() {
      const menuToggle = sectionEl.querySelector('.hero-slideshow-' + sectionId + '__menu-toggle');
      const mobileNavId = menuToggle ? menuToggle.getAttribute('aria-controls') : null;
      const mobileNav = mobileNavId ? document.getElementById(mobileNavId) : null;
      const header = sectionEl.querySelector('.hero-slideshow-' + sectionId + '__header');
      const backdrop = sectionEl.querySelector('.hero-slideshow-' + sectionId + '__mobile-backdrop');
      
      if (!menuToggle || !mobileNav) {
        console.warn('Hero Slideshow Header: Mobile menu elements not found');
        return;
      }

      // Calculate header height and set CSS variable
      function updateHeaderHeight() {
        if (header) {
          const h = Math.ceil(header.getBoundingClientRect().height);
          mobileNav.style.setProperty('--hs-header-h', h + 'px');
        }
      }
      
      // Initial calculation
      updateHeaderHeight();
      
      // Update on resize
      window.addEventListener('resize', updateHeaderHeight);

      // Ensure mobile nav starts hidden
      mobileNav.setAttribute('aria-hidden', 'true');
      mobileNav.classList.remove('mobile-nav-open');
      menuToggle.setAttribute('aria-expanded', 'false');
      if (backdrop) {
        backdrop.setAttribute('aria-hidden', 'true');
        backdrop.classList.remove('active');
      }

      function toggleMenu() {
        const isExpanded = menuToggle.getAttribute('aria-expanded') === 'true';
        const newExpanded = !isExpanded;
        
        // Update header height before opening
        if (newExpanded) {
          updateHeaderHeight();
        }
        
        menuToggle.setAttribute('aria-expanded', newExpanded ? 'true' : 'false');
        mobileNav.setAttribute('aria-hidden', newExpanded ? 'false' : 'true');

        if (newExpanded) {
          mobileNav.classList.add('mobile-nav-open');
          if (backdrop) {
            backdrop.setAttribute('aria-hidden', 'false');
            backdrop.classList.add('active');
          }
        } else {
          mobileNav.classList.remove('mobile-nav-open');
          if (backdrop) {
            backdrop.setAttribute('aria-hidden', 'true');
            backdrop.classList.remove('active');
          }
        }
      }

      function closeMenu() {
        menuToggle.setAttribute('aria-expanded', 'false');
        mobileNav.setAttribute('aria-hidden', 'true');
        mobileNav.classList.remove('mobile-nav-open');
        if (backdrop) {
          backdrop.setAttribute('aria-hidden', 'true');
          backdrop.classList.remove('active');
        }
      }

      // Toggle button click
      menuToggle.addEventListener('click', function(e) {
        e.stopPropagation();
        e.preventDefault();
        toggleMenu();
      });

      // Close menu when clicking on a link or icon
      const mobileLinks = mobileNav.querySelectorAll('.hero-slideshow-' + sectionId + '__mobile-menu-link, .hero-slideshow-' + sectionId + '__mobile-icon');
      mobileLinks.forEach(function(link) {
        link.addEventListener('click', function() {
          closeMenu();
        });
      });

      // Close menu when clicking outside or on backdrop
      document.addEventListener('click', function(event) {
        if (mobileNav.getAttribute('aria-hidden') === 'false' && 
            !menuToggle.contains(event.target) && 
            !mobileNav.contains(event.target)) {
          closeMenu();
        }
      });
      
      // Backdrop click handler
      if (backdrop) {
        backdrop.addEventListener('click', function() {
          closeMenu();
        });
      }

      // Close menu on Escape key
      document.addEventListener('keydown', function(event) {
        if (event.key === 'Escape' && mobileNav.getAttribute('aria-hidden') === 'false') {
          closeMenu();
        }
      });
    }

    // Wait for DOM to be ready
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initMobileMenu);
    } else {
      // Small delay to ensure all elements are rendered
      setTimeout(initMobileMenu, 100);
    }

    // Slideshow functionality - only runs if slides.length > 1
    const slides = sectionEl.querySelectorAll('.hero-slideshow-' + sectionId + '__slide');
    const indicators = sectionEl.querySelectorAll('.hero-slideshow-' + sectionId + '__indicator');

    if (slides.length > 1) {
      let currentSlide = 0;
      let autoplayInterval = null;

      function showSlide(index) {
        slides.forEach((slide, i) => {
          if (i === index) {
            slide.classList.add('active');
          } else {
            slide.classList.remove('active');
          }
        });

        indicators.forEach((indicator, i) => {
          if (i === index) {
            indicator.classList.add('active');
          } else {
            indicator.classList.remove('active');
          }
        });

        currentSlide = index;
      }

      function nextSlide() {
        const next = (currentSlide + 1) % slides.length;
        showSlide(next);
      }

      function goToSlide(index) {
        if (index >= 0 && index < slides.length) {
          showSlide(index);
        }
      }

      // Indicator clicks
      indicators.forEach((indicator, index) => {
        indicator.addEventListener('click', () => {
          goToSlide(index);
          resetAutoplay();
        });
      });

      // Auto-rotate
      function startAutoplay() {
        {% if autoplay_enabled %}
          autoplayInterval = setInterval(nextSlide, {{ autoplay_speed }});
        {% endif %}
      }

      function stopAutoplay() {
        if (autoplayInterval) {
          clearInterval(autoplayInterval);
          autoplayInterval = null;
        }
      }

      function resetAutoplay() {
        stopAutoplay();
        startAutoplay();
      }

      // Pause on hover
      const slideshow = sectionEl.querySelector('.hero-slideshow-' + sectionId + '__slideshow');
      if (slideshow) {
        slideshow.addEventListener('mouseenter', stopAutoplay);
        slideshow.addEventListener('mouseleave', startAutoplay);
      }

      // Initialize slideshow
      startAutoplay();
    }
  })();
</script>

