{%- liquid
  assign section_id = section.id
  assign heading = section.settings.heading
  assign card_radius = section.settings.card_radius
  assign overlay_opacity = section.settings.overlay_opacity | divided_by: 100.0
  assign hover_animation = section.settings.hover_animation
  assign padding_top = section.settings.padding_top
  assign padding_bottom = section.settings.padding_bottom
  assign collection_blocks = section.blocks | where: 'type', 'collection'
-%}

{%- style -%}
  .featured-collections-{{ section_id }} {
    padding-top: {{ padding_top | times: 0.5 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.5 | round: 0 }}px;
    background-color: {{ section.settings.background_color }};
  }

  @media screen and (min-width: 750px) {
    .featured-collections-{{ section_id }} {
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
    }
  }

  .featured-collections-{{ section_id }}__container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  @media screen and (max-width: 749px) {
    .featured-collections-{{ section_id }}__container {
      padding: 0 1rem;
    }
  }

  {%- if heading != blank -%}
    .featured-collections-{{ section_id }}__heading {
      margin: 0 0 3rem 0;
      font-size: 2.5rem;
      font-weight: 700;
      line-height: 1.2;
      text-align: center;
      color: {{ section.settings.text_color }};
    }

  {%- endif -%}

  .featured-collections-{{ section_id }}__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }

  @media screen and (max-width: 768px) {
    .featured-collections-{{ section_id }}__container {
      padding: 0 1rem;
      width: 100%;
      max-width: 100%;
      overflow-x: hidden;
    }

    {%- if heading != blank -%}
      .featured-collections-{{ section_id }}__heading {
        font-size: 1.75rem;
        margin-bottom: 2rem;
        word-wrap: break-word;
        overflow-wrap: break-word;
      }
    {%- endif -%}

    .featured-collections-{{ section_id }}__grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
      display: grid;
    }

    .featured-collections-{{ section_id }}__card {
      position: relative;
      width: 100%;
      max-width: 100%;
      transform: none !important;
    }

    .featured-collections-{{ section_id }}__image-wrapper {
      position: absolute;
      inset: 0;
      width: 100%;
      height: 100%;
    }

    .featured-collections-{{ section_id }}__image {
      width: 100%;
      max-width: 100%;
      height: 100%;
      object-fit: cover;
    }
  }

  @media screen and (min-width: 990px) {
    .featured-collections-{{ section_id }}__grid {
      grid-template-columns: repeat({{ collection_blocks.size | at_most: 4 }}, 1fr);
      gap: 2.5rem;
    }
  }

  .featured-collections-{{ section_id }}__card {
    position: relative;
    aspect-ratio: 3 / 4;
    overflow: hidden;
    border-radius: {{ card_radius }}px;
    text-decoration: none;
    display: block;
    background: #f5f5f5;
  }

  {% if hover_animation %}
    .featured-collections-{{ section_id }}__card {
      transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }

    @media (hover: hover) {
      .featured-collections-{{ section_id }}__card:hover {
        transform: translateY(-8px);
      }
    }

    .featured-collections-{{ section_id }}__card:active {
      transform: translateY(-4px);
    }
  {% endif %}

  .featured-collections-{{ section_id }}__image-wrapper {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
  }

  .featured-collections-{{ section_id }}__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .featured-collections-{{ section_id }}__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(0, 0, 0, {{ overlay_opacity }}), rgba(0, 0, 0, 0));
    pointer-events: none;
  }

  .featured-collections-{{ section_id }}__content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 2rem;
    z-index: 2;
  }

  @media screen and (max-width: 749px) {
    .featured-collections-{{ section_id }}__content {
      padding: 1.5rem;
    }
  }

  .featured-collections-{{ section_id }}__title {
    margin: 0;
    font-size: 1.5rem;
    font-weight: 600;
    color: #ffffff;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
  }

  @media screen and (max-width: 768px) {
    .featured-collections-{{ section_id }}__content {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      padding: 1.5rem;
      z-index: 2;
    }

    .featured-collections-{{ section_id }}__title {
      font-size: 1.125rem;
      word-wrap: break-word;
      overflow-wrap: break-word;
    }
  }
{%- endstyle -%}

<section class="featured-collections-{{ section_id }}" data-section-id="{{ section.id }}">
  <div class="featured-collections-{{ section_id }}__container">
    {%- if heading != blank -%}
      <h2 class="featured-collections-{{ section_id }}__heading">{{ heading }}</h2>
    {%- endif -%}

    <div class="featured-collections-{{ section_id }}__grid">
      {%- for block in collection_blocks -%}
        {%- assign collection = collections[block.settings.collection] -%}
        {%- if collection != blank -%}
          <a href="{{ collection.url }}" class="featured-collections-{{ section_id }}__card" {{ block.shopify_attributes }}>
            <div class="featured-collections-{{ section_id }}__image-wrapper">
              {%- assign image_class = 'featured-collections-' | append: section_id | append: '__image' -%}
              {%- if block.settings.image != blank -%}
                {{ block.settings.image | image_url: width: 600 | image_tag: loading: 'lazy', alt: collection.title, class: image_class }}
              {%- elsif collection.featured_image != blank -%}
                {{ collection.featured_image | image_url: width: 600 | image_tag: loading: 'lazy', alt: collection.title, class: image_class }}
              {%- else -%}
                {{ 'collection-1' | placeholder_svg_tag: image_class }}
              {%- endif -%}
              <div class="featured-collections-{{ section_id }}__overlay"></div>
            </div>
            <div class="featured-collections-{{ section_id }}__content">
              <h3 class="featured-collections-{{ section_id }}__title">{{ collection.title }}</h3>
            </div>
          </a>
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Featured Collections Grid",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "card_radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Card Border Radius",
      "default": 16
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Overlay Opacity",
      "default": 60
    },
    {
      "type": "checkbox",
      "id": "hover_animation",
      "label": "Enable Hover Animation",
      "default": true
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 80
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Custom Image",
          "info": "Optional. If not set, collection featured image will be used."
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "Featured Collections Grid",
      "blocks": [
        {
          "type": "collection"
        },
        {
          "type": "collection"
        },
        {
          "type": "collection"
        }
      ]
    }
  ]
}
{% endschema %}

