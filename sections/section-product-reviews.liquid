{%- liquid
  assign section_id = section.id
  assign heading = section.settings.heading
  assign padding_top = section.settings.padding_top
  assign padding_bottom = section.settings.padding_bottom
-%}

{%- style -%}
  .product-reviews-{{ section_id }} {
    padding-top: {{ padding_top | times: 0.5 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.5 | round: 0 }}px;
    background-color: {{ section.settings.background_color }};
  }

  @media screen and (min-width: 750px) {
    .product-reviews-{{ section_id }} {
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
    }
  }

  .product-reviews-{{ section_id }}__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  @media screen and (max-width: 768px) {
    .product-reviews-{{ section_id }} {
      width: 100%;
      overflow-x: hidden;
    }

    .product-reviews-{{ section_id }}__container {
      padding: 0 1rem;
      width: 100%;
      max-width: 100%;
    }

    .product-reviews-{{ section_id }}__heading {
      font-size: 1.75rem;
      margin-bottom: 2rem;
      word-wrap: break-word;
      overflow-wrap: break-word;
    }

    .product-reviews-{{ section_id }}__wrapper {
      width: 100%;
      max-width: 100%;
      overflow-x: hidden;
    }

    .product-reviews-{{ section_id }}__reviews {
      width: 100%;
      max-width: 100%;
      overflow-x: hidden;
    }

    .product-reviews-{{ section_id }}__placeholder {
      padding: 3rem 1.5rem;
      width: 100%;
      max-width: 100%;
      box-sizing: border-box;
    }

    .product-reviews-{{ section_id }}__placeholder-text {
      font-size: 1rem;
      word-wrap: break-word;
      overflow-wrap: break-word;
    }
  }

  .product-reviews-{{ section_id }}__heading {
    margin: 0 0 3rem 0;
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    text-align: center;
    color: {{ section.settings.text_color }};
  }


  .product-reviews-{{ section_id }}__wrapper {
    min-height: 200px;
  }

  .product-reviews-{{ section_id }}__placeholder {
    text-align: center;
    padding: 4rem 2rem;
    color: {{ section.settings.text_color }};
    opacity: 0.6;
  }

  .product-reviews-{{ section_id }}__placeholder-text {
    margin: 0;
    font-size: 1.125rem;
  }

  /* App-agnostic review container */
  .product-reviews-{{ section_id }}__reviews {
    width: 100%;
  }

  /* Common review app selectors */
  .product-reviews-{{ section_id }}__reviews :global([id*="reviews"]),
  .product-reviews-{{ section_id }}__reviews :global([class*="review"]),
  .product-reviews-{{ section_id }}__reviews :global([id*="judge"]),
  .product-reviews-{{ section_id }}__reviews :global([id*="loox"]),
  .product-reviews-{{ section_id }}__reviews :global([id*="stamped"]),
  .product-reviews-{{ section_id }}__reviews :global([id*="yotpo"]) {
    width: 100%;
  }
{%- endstyle -%}

<section class="product-reviews-{{ section_id }}" data-section-id="{{ section.id }}">
  <div class="product-reviews-{{ section_id }}__container">
    {%- if heading != blank -%}
      <h2 class="product-reviews-{{ section_id }}__heading">{{ heading }}</h2>
    {%- endif -%}

    <div class="product-reviews-{{ section_id }}__wrapper">
      <div class="product-reviews-{{ section_id }}__reviews" id="product-reviews-{{ section_id }}">
        {%- comment -%}
          This section is designed to work with any review app.
          Review apps typically inject their content into a container with a specific ID or class.
          Common review apps: Judge.me, Loox, Stamped.io, Yotpo, etc.
        {%- endcomment -%}
      </div>

      {%- comment -%} Placeholder shown when no reviews exist {%- endcomment -%}
      <div class="product-reviews-{{ section_id }}__placeholder" id="reviews-placeholder-{{ section_id }}">
        <p class="product-reviews-{{ section_id }}__placeholder-text">
          {{ section.settings.placeholder_text | default: 'No reviews yet. Be the first to review this product!' }}
        </p>
      </div>
    </div>
  </div>
</section>

<script>
  (function() {
    const reviewsContainer = document.getElementById('product-reviews-{{ section_id }}');
    const placeholder = document.getElementById('reviews-placeholder-{{ section_id }}');
    
    if (!reviewsContainer || !placeholder) return;

    // Check if any review app has injected content
    const checkForReviews = setInterval(function() {
      const hasContent = reviewsContainer.children.length > 0 || 
                        reviewsContainer.textContent.trim().length > 0 ||
                        reviewsContainer.querySelector('[id*="reviews"], [class*="review"], [id*="judge"], [id*="loox"], [id*="stamped"], [id*="yotpo"]');
      
      if (hasContent) {
        placeholder.style.display = 'none';
        clearInterval(checkForReviews);
      }
    }, 500);

    // Stop checking after 10 seconds
    setTimeout(function() {
      clearInterval(checkForReviews);
    }, 10000);
  })();
</script>

{% schema %}
{
  "name": "Product Reviews",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Customer Reviews"
    },
    {
      "type": "textarea",
      "id": "placeholder_text",
      "label": "Placeholder Text",
      "default": "No reviews yet. Be the first to review this product!"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 80
    }
  ],
  "presets": [
    {
      "name": "Product Reviews"
    }
  ]
}
{% endschema %}

