{%- liquid
  assign section_id = section.id
  assign top_heading = section.settings.top_heading
  assign top_subheading = section.settings.top_subheading
  assign top_button_text = section.settings.top_button_text
  assign top_button_url = section.settings.top_button_url
  assign top_button_text_2 = section.settings.top_button_text_2
  assign top_button_url_2 = section.settings.top_button_url_2
  assign top_bg_type = section.settings.top_bg_type | default: 'image'
  assign top_bg_image = section.settings.top_bg_image
  assign top_bg_gradient = section.settings.top_bg_gradient
  assign top_min_height = section.settings.top_min_height | default: 60
  assign bottom_bg_color = section.settings.bottom_bg_color
  assign bottom_padding = section.settings.bottom_padding | default: 4
  assign features_layout = section.settings.features_layout | default: '3-columns'
  assign section_radius = section.settings.section_radius | default: 24
  assign feature_blocks = section.blocks | where: 'type', 'feature'
-%}

<section
  id="SplitHeroFeatures-{{ section_id }}"
  class="split-section split-section--{{ section_id }}"
  style="--split-section-radius: {{ section_radius }}px;--split-bottom-padding: {{ bottom_padding }}rem;{% if bottom_bg_color != blank %} --split-bottom-bg: {{ bottom_bg_color }};{% endif %}{% if top_bg_type == 'gradient' and top_bg_gradient != blank %} --split-top-bg: {{ top_bg_gradient }};{% elsif top_bg_type == 'image' and top_bg_image != blank %} --split-top-bg-image: url({{ top_bg_image | image_url: width: 1920 }});{% endif %}"
>
  <div class="split-top">
    <div class="split-top-content">
      {%- if top_heading != blank -%}
        <h1 class="split-top-heading">{{ top_heading }}</h1>
      {%- endif -%}
      
      {%- if top_subheading != blank -%}
        <p class="split-top-subheading">{{ top_subheading }}</p>
      {%- endif -%}
      
      {%- if top_button_text != blank or top_button_text_2 != blank -%}
        <div class="split-top-buttons">
          {%- if top_button_text != blank and top_button_url != blank -%}
            <a href="{{ top_button_url }}" class="split-button split-button--primary">{{ top_button_text }}</a>
          {%- endif -%}
          {%- if top_button_text_2 != blank and top_button_url_2 != blank -%}
            <a href="{{ top_button_url_2 }}" class="split-button split-button--secondary">{{ top_button_text_2 }}</a>
          {%- endif -%}
        </div>
      {%- endif -%}
    </div>
  </div>

  <div class="split-bottom">
    <div class="split-bottom-container">
      {%- if feature_blocks.size > 0 -%}
        <div class="split-features-grid split-features-grid--{{ features_layout }}">
          {%- for block in feature_blocks -%}
            {%- liquid
              assign image_position = block.settings.image_position | default: 'top'
              assign title_color = block.settings.title_color
              assign description_color = block.settings.description_color
            -%}
            <div 
              class="split-feature-box split-feature-box--image-{{ image_position }}" 
              {{ block.shopify_attributes }}
              style="{% if title_color != blank %}--feature-title-color: {{ title_color }};{% endif %}{% if description_color != blank %}--feature-description-color: {{ description_color }};{% endif %}"
            >
              {%- if block.settings.feature_image != blank -%}
                <div class="split-feature-image">
                  <img
                    src="{{ block.settings.feature_image | image_url: width: 400 }}"
                    alt="{{ block.settings.feature_image.alt | default: block.settings.feature_title | escape }}"
                    loading="lazy"
                    width="{{ block.settings.feature_image.width }}"
                    height="{{ block.settings.feature_image.height }}"
                  >
                </div>
              {%- elsif block.settings.feature_icon != blank -%}
                <div class="split-feature-icon">
                  {{ block.settings.feature_icon }}
                </div>
              {%- endif -%}
              
              {%- if block.settings.feature_title != blank -%}
                <h3 class="split-feature-title">{{ block.settings.feature_title }}</h3>
              {%- endif -%}
              
              {%- if block.settings.feature_description != blank -%}
                <p class="split-feature-description">{{ block.settings.feature_description }}</p>
              {%- endif -%}
            </div>
          {%- endfor -%}
        </div>
      {%- endif -%}
    </div>
  </div>
</section>

<style>
  /* Split Section Base */
  .split-section--{{ section_id }} {
    width: 100%;
    max-width: var(--page-width, 120rem);
    margin: 0 auto;
    border-radius: var(--split-section-radius);
    overflow: hidden;
    background: var(--split-bottom-bg, rgba(var(--color-background), 1));
    box-shadow: 0 4px 24px rgba(var(--color-foreground), 0.08);
  }

  /* Top Area (Hero) */
  .split-section--{{ section_id }} .split-top {
    width: 100%;
    min-height: {{ top_min_height }}vh;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    padding: 4rem 2rem;
    background: var(--split-top-bg, rgba(var(--color-foreground), 0.03));
    background-image: var(--split-top-bg-image, none);
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    border-radius: var(--split-section-radius) var(--split-section-radius) 0 0;
  }

  .split-section--{{ section_id }} .split-top::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(var(--color-foreground), 0.1);
    z-index: 1;
  }

  .split-section--{{ section_id }} .split-top-content {
    position: relative;
    z-index: 2;
    text-align: center;
    max-width: 800px;
    width: 100%;
  }

  .split-section--{{ section_id }} .split-top-heading {
    font-size: clamp(2.4rem, 5vw, 4.8rem);
    font-weight: 700;
    line-height: 1.2;
    margin: 0 0 1.6rem;
    color: rgba(var(--color-foreground), 1);
  }

  .split-section--{{ section_id }} .split-top-subheading {
    font-size: clamp(1.6rem, 2.5vw, 2rem);
    line-height: 1.6;
    margin: 0 0 3.2rem;
    color: rgba(var(--color-foreground), 0.9);
  }

  .split-section--{{ section_id }} .split-top-buttons {
    display: flex;
    gap: 1.6rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .split-section--{{ section_id }} .split-button {
    display: inline-block;
    padding: 1.4rem 3.2rem;
    border-radius: 0.8rem;
    font-size: 1.6rem;
    font-weight: 600;
    text-decoration: none;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    border: 2px solid transparent;
  }

  .split-section--{{ section_id }} .split-button--primary {
    background: rgba(var(--color-button), 1);
    color: rgba(var(--color-button-text), 1);
    border-color: rgba(var(--color-button), 1);
  }

  .split-section--{{ section_id }} .split-button--primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 16px rgba(var(--color-button), 0.3);
  }

  .split-section--{{ section_id }} .split-button--secondary {
    background: transparent;
    color: rgba(var(--color-foreground), 1);
    border-color: rgba(var(--color-foreground), 0.3);
  }

  .split-section--{{ section_id }} .split-button--secondary:hover {
    background: rgba(var(--color-foreground), 0.05);
    transform: translateY(-2px);
  }

  /* Bottom Area */
  .split-section--{{ section_id }} .split-bottom {
    width: 100%;
    background: var(--split-bottom-bg, rgba(var(--color-background), 1));
    border-radius: 0 0 var(--split-section-radius) var(--split-section-radius);
    padding: var(--split-bottom-padding, 4rem) 2rem;
  }

  .split-section--{{ section_id }} .split-bottom-container {
    max-width: 120rem;
    margin: 0 auto;
  }

  /* Features Grid */
  .split-section--{{ section_id }} .split-features-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2.4rem;
  }

  @media screen and (min-width: 750px) {
    /* 3 Columns Layout */
    .split-section--{{ section_id }} .split-features-grid--3-columns {
      grid-template-columns: repeat(3, 1fr);
    }

    /* 1 Top, 2 Bottom Layout */
    .split-section--{{ section_id }} .split-features-grid--1-top-2-bottom {
      grid-template-columns: repeat(2, 1fr);
    }

    .split-section--{{ section_id }} .split-features-grid--1-top-2-bottom .split-feature-box:first-child {
      grid-column: 1 / -1;
      max-width: 60%;
      margin: 0 auto 2.4rem;
    }

    /* 2 Top, 1 Bottom Layout */
    .split-section--{{ section_id }} .split-features-grid--2-top-1-bottom {
      grid-template-columns: repeat(2, 1fr);
    }

    .split-section--{{ section_id }} .split-features-grid--2-top-1-bottom .split-feature-box:last-child {
      grid-column: 1 / -1;
      max-width: 60%;
      margin: 2.4rem auto 0;
    }

    /* 1 Left, 2 Right Layout */
    .split-section--{{ section_id }} .split-features-grid--1-left-2-right {
      grid-template-columns: 1fr 1fr;
      grid-template-rows: 1fr 1fr;
    }

    .split-section--{{ section_id }} .split-features-grid--1-left-2-right .split-feature-box:first-child {
      grid-row: 1 / -1;
    }

    /* 2 Left, 1 Right Layout */
    .split-section--{{ section_id }} .split-features-grid--2-left-1-right {
      grid-template-columns: 1fr 1fr;
      grid-template-rows: 1fr 1fr;
    }

    .split-section--{{ section_id }} .split-features-grid--2-left-1-right .split-feature-box:last-child {
      grid-row: 1 / -1;
      grid-column: 2;
    }
  }

  /* Feature Box */
  .split-section--{{ section_id }} .split-feature-box {
    background: rgba(var(--color-background), 1);
    border-radius: 1.6rem;
    padding: 2.4rem;
    box-shadow: 0 2px 12px rgba(var(--color-foreground), 0.06);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    height: 100%;
  }

  /* Image Position: Top (default) */
  .split-section--{{ section_id }} .split-feature-box--image-top {
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  /* Image Position: Bottom */
  .split-section--{{ section_id }} .split-feature-box--image-bottom {
    flex-direction: column-reverse;
    align-items: center;
    text-align: center;
  }

  /* Image Position: Left */
  .split-section--{{ section_id }} .split-feature-box--image-left {
    flex-direction: row;
    align-items: flex-start;
    text-align: left;
  }

  .split-section--{{ section_id }} .split-feature-box--image-left .split-feature-image,
  .split-section--{{ section_id }} .split-feature-box--image-left .split-feature-icon {
    margin-right: 2rem;
    margin-bottom: 0;
    flex-shrink: 0;
  }

  /* Image Position: Right */
  .split-section--{{ section_id }} .split-feature-box--image-right {
    flex-direction: row-reverse;
    align-items: flex-start;
    text-align: right;
  }

  .split-section--{{ section_id }} .split-feature-box--image-right .split-feature-image,
  .split-section--{{ section_id }} .split-feature-box--image-right .split-feature-icon {
    margin-left: 2rem;
    margin-bottom: 0;
    flex-shrink: 0;
  }

  .split-section--{{ section_id }} .split-feature-box:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(var(--color-foreground), 0.12);
  }

  .split-section--{{ section_id }} .split-feature-image {
    width: 100%;
    max-width: 120px;
    margin: 0 auto 1.6rem;
    border-radius: 1.2rem;
    overflow: hidden;
  }

  .split-section--{{ section_id }} .split-feature-box--image-left .split-feature-image,
  .split-section--{{ section_id }} .split-feature-box--image-right .split-feature-image {
    max-width: 100px;
    margin: 0;
  }

  .split-section--{{ section_id }} .split-feature-image img {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  .split-section--{{ section_id }} .split-feature-icon {
    font-size: 4.8rem;
    margin-bottom: 1.6rem;
    line-height: 1;
  }

  .split-section--{{ section_id }} .split-feature-box--image-left .split-feature-icon,
  .split-section--{{ section_id }} .split-feature-box--image-right .split-feature-icon {
    margin-bottom: 0;
  }

  .split-section--{{ section_id }} .split-feature-title {
    font-size: 2rem;
    font-weight: 600;
    margin: 0 0 1.2rem;
    color: var(--feature-title-color, rgba(var(--color-foreground), 1));
    line-height: 1.3;
  }

  .split-section--{{ section_id }} .split-feature-description {
    font-size: 1.5rem;
    line-height: 1.6;
    margin: 0;
    color: var(--feature-description-color, rgba(var(--color-foreground), 0.7));
    flex: 1;
  }

  /* Mobile Adjustments */
  @media screen and (max-width: 749px) {
    .split-section--{{ section_id }} .split-top {
      min-height: 50vh;
      padding: 3rem 1.5rem;
    }

    .split-section--{{ section_id }} .split-bottom {
      padding: 3rem 1.5rem;
    }

    .split-section--{{ section_id }} .split-top-buttons {
      flex-direction: column;
      width: 100%;
    }

    .split-section--{{ section_id }} .split-button {
      width: 100%;
      text-align: center;
    }

    /* Mobile: Force top image position for better mobile UX */
    .split-section--{{ section_id }} .split-feature-box--image-left,
    .split-section--{{ section_id }} .split-feature-box--image-right {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    .split-section--{{ section_id }} .split-feature-box--image-left .split-feature-image,
    .split-section--{{ section_id }} .split-feature-box--image-right .split-feature-image,
    .split-section--{{ section_id }} .split-feature-box--image-left .split-feature-icon,
    .split-section--{{ section_id }} .split-feature-box--image-right .split-feature-icon {
      margin: 0 auto 1.6rem;
      max-width: 120px;
    }
  }
</style>

