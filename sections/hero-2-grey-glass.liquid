    { "type": "range", "id": "border_thickness", "label": "Border thickness", "min": 0, "max": 4, "step": 1, "unit": "px", "default": 0 },

    { "type": "header", "content": "Card box" },
    { "type": "range", "id": "card_radius", "label": "Card radius", "min": 0, "max": 60, "step": 2, "unit": "px", "default": 26 },
    { "type": "range", "id": "card_padding", "label": "Card padding", "min": 0, "max": 88, "step": 4, "unit": "px", "default": 0 },

    { "type": "header", "content": "Card heights" },
    { "type": "range", "id": "left_card_height", "label": "Left card height (desktop)", "min": 140, "max": 900, "step": 20, "unit": "px", "default": 420 },
    { "type": "range", "id": "right_card_height", "label": "Right card height (desktop)", "min": 140, "max": 900, "step": 20, "unit": "px", "default": 280 },
    { "type": "range", "id": "left_card_height_mobile", "label": "Left card height (mobile)", "min": 140, "max": 900, "step": 20, "unit": "px", "default": 320 },
    { "type": "range", "id": "right_card_height_mobile", "label": "Right card height (mobile)", "min": 140, "max": 900, "step": 20, "unit": "px", "default": 260 },

    { "type": "header", "content": "Left/Right card offsets (desktop)" },
    { "type": "range", "id": "left_card_offset_x", "label": "Left card X (desktop)", "min": -400, "max": 400, "step": 10, "unit": "px", "default": 0 },
    { "type": "range", "id": "left_card_offset_y", "label": "Left card Y (desktop)", "min": -400, "max": 400, "step": 10, "unit": "px", "default": 0 },
    { "type": "range", "id": "right_card_offset_x", "label": "Right card X (desktop)", "min": -400, "max": 400, "step": 10, "unit": "px", "default": 0 },
    { "type": "range", "id": "right_card_offset_y", "label": "Right card Y (desktop)", "min": -400, "max": 400, "step": 10, "unit": "px", "default": 0 },

    { "type": "header", "content": "Left/Right card offsets (mobile)" },
    { "type": "range", "id": "left_card_offset_x_mobile", "label": "Left card X (mobile)", "min": -400, "max": 400, "step": 10, "unit": "px", "default": 0 },
    { "type": "range", "id": "left_card_offset_y_mobile", "label": "Left card Y (mobile)", "min": -400, "max": 400, "step": 10, "unit": "px", "default": 0 },
    { "type": "range", "id": "right_card_offset_x_mobile", "label": "Right card X (mobile)", "min": -400, "max": 400, "step": 10, "unit": "px", "default": 0 },
    { "type": "range", "id": "right_card_offset_y_mobile", "label": "Right card Y (mobile)", "min": -400, "max": 400, "step": 10, "unit": "px", "default": 0 },

    { "type": "header", "content": "Card text" },
    { "type": "checkbox", "id": "hide_card_text", "label": "Hide card text", "default": true },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "default": "left",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ]
    },
    { "type": "color", "id": "text_color", "label": "Text color", "default": "#FFFFFF" },
    { "type": "range", "id": "text_opacity", "label": "Text opacity", "min": 40, "max": 100, "step": 5, "unit": "%", "default": 100 },
    { "type": "range", "id": "heading2_size", "label": "Card heading size", "min": 14, "max": 60, "step": 2, "unit": "px", "default": 28 },
    { "type": "range", "id": "text_size", "label": "Card text size", "min": 12, "max": 28, "step": 1, "unit": "px", "default": 16 },

