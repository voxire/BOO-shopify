    { "type": "color", "id": "glass_color", "label": "Glass color", "default": "#000000" },
    { "type": "range", "id": "glass_opacity", "label": "Glass opacity", "min": 0, "max": 80, "step": 1, "unit": "%", "default": 18 },
    { "type": "color", "id": "border_color", "label": "Border color", "default": "#FFFFFF" },
