    { "type": "range", "id": "cards_offset_y_mobile", "label": "Cards offset Y (mobile)", "min": -400, "max": 400, "step": 10, "unit": "px", "default": 0 },

    { "type": "header", "content": "Left/Right width ratio (desktop)" },
