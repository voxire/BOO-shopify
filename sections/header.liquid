{%- style -%}
  .header {
    padding: {{ section.settings.padding_top | times: 0.5 | round: 0 }}px 3rem {{ section.settings.padding_bottom | times: 0.5 | round: 0 }}px 3rem;
  }

  .section-header {
    /* This is for fixing a Safari z-index issue. PR #2147 */
    margin-bottom: {{ section.settings.margin_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-header {
      margin-bottom: {{ section.settings.margin_bottom }}px;
    }
  }

  @media screen and (min-width: 990px) {
    .header {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* Slideshow Container */
  .header-slideshow-{{ section_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .header-slideshow-{{ section_id }}__slideshow {
    position: relative;
    width: 100%;
    {% if slide_height == 'adapt_image' %}
      height: auto;
    {% elsif slide_height == 'small' %}
      height: 400px;
    {% elsif slide_height == 'medium' %}
      height: 500px;
    {% elsif slide_height == 'large' %}
      height: 600px;
    {% else %}
      height: 700px;
    {% endif %}
    overflow: hidden;
  }

  .header-slideshow-{{ section_id }}__slides {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .header-slideshow-{{ section_id }}__slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: opacity 1s ease-in-out;
    z-index: 1;
  }

  .header-slideshow-{{ section_id }}__slide.active {
    opacity: 1;
    z-index: 2;
  }

  .header-slideshow-{{ section_id }}__slide-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .header-slideshow-{{ section_id }}__slide-content {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 3;
  }

  .header-slideshow-{{ section_id }}__button {
    position: absolute;
    padding: 1rem 2rem;
    background: {{ button_bg_color }};
    color: {{ button_text_color }};
    text-decoration: none;
    border-radius: 8px;
    font-size: 16px;
    font-weight: 600;
    transition: transform 0.2s ease, opacity 0.2s ease;
    border: none;
    cursor: pointer;
    z-index: 4;
  }

  .header-slideshow-{{ section_id }}__button:hover {
    transform: translateY(-2px);
    opacity: 0.9;
  }

  /* Slide indicators */
  .header-slideshow-{{ section_id }}__indicators {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 0.5rem;
    z-index: 5;
  }

  .header-slideshow-{{ section_id }}__indicator {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.5);
    border: none;
    cursor: pointer;
    transition: background 0.3s ease;
    padding: 0;
  }

  .header-slideshow-{{ section_id }}__indicator.active {
    background: {{ text_color }};
  }

  /* Make header wrapper transparent and position absolutely */
  {% if slides.size > 0 %}
    .header-wrapper {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      z-index: 10;
      background: transparent !important;
    }

    .header {
      background: transparent !important;
    }

    /* Ensure logo stays on far left */
    .header__heading {
      order: 1;
      margin-right: auto;
    }

    /* Menu in center */
    .header__inline-menu {
      order: 2;
      flex: 1;
      display: flex;
      justify-content: center;
    }

    /* Icons on right */
    .header__icons {
      order: 3;
      margin-left: auto;
    }

    /* Make cart icon bigger */
    .header__icon--cart {
      width: 56px !important;
      height: 56px !important;
    }

    .header__icon--cart .svg-wrapper {
      width: 32px !important;
      height: 32px !important;
    }

    .header__icon--cart .svg-wrapper svg {
      width: 100%;
      height: 100%;
    }
  {% endif %}

  @media screen and (max-width: 990px) {
    .header-slideshow-{{ section_id }}__slideshow {
      {% if slide_height == 'adapt_image' %}
        height: auto;
      {% elsif slide_height == 'small' %}
        height: 300px;
      {% elsif slide_height == 'medium' %}
        height: 400px;
      {% elsif slide_height == 'large' %}
        height: 500px;
      {% else %}
        height: 600px;
      {% endif %}
    }
  }

  @media screen and (max-width: 768px) {
    .header-slideshow-{{ section_id }}__slideshow {
      {% if slide_height == 'adapt_image' %}
        height: auto;
      {% elsif slide_height == 'small' %}
        height: 250px;
      {% elsif slide_height == 'medium' %}
        height: 350px;
      {% elsif slide_height == 'large' %}
        height: 450px;
      {% else %}
        height: 550px;
      {% endif %}
    }
  }
