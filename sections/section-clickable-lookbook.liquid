{%- liquid
  assign section_id = section.id
  assign overlay_style = section.settings.overlay_style
  assign image_blocks = section.blocks | where: 'type', 'lookbook_image'
-%}

{%- style -%}
  .clickable-lookbook-{{ section_id }} {
    padding: 4rem 0;
    background-color: {{ section.settings.background_color }};
  }

  .clickable-lookbook-{{ section_id }}__container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .clickable-lookbook-{{ section_id }}__wrapper {
    position: relative;
    width: 100%;
    max-width: 1000px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    grid-template-rows: repeat(2, 1fr);
    gap: 0.5rem;
    aspect-ratio: 1 / 1;
    border-radius: 12px;
    overflow: hidden;
    background: #f5f5f5;
  }

  .clickable-lookbook-{{ section_id }}__image-item {
    position: relative;
    overflow: hidden;
    border-radius: 8px;
    cursor: pointer;
    transition: transform 0.3s ease, opacity 0.3s ease;
    min-height: 0;
  }

  .clickable-lookbook-{{ section_id }}__image-item:hover {
    transform: scale(1.02);
    opacity: 0.9;
  }

  /* Different size options - using aspect ratios and positioning */
  .clickable-lookbook-{{ section_id }}__image-item--size1 {
    grid-column: 1;
    grid-row: 1 / 3;
    aspect-ratio: 1 / 2;
  }

  .clickable-lookbook-{{ section_id }}__image-item--size2 {
    grid-column: 2;
    grid-row: 1;
    aspect-ratio: 1 / 1;
  }

  .clickable-lookbook-{{ section_id }}__image-item--size3 {
    grid-column: 2;
    grid-row: 2;
    aspect-ratio: 1 / 1;
  }

  .clickable-lookbook-{{ section_id }}__image-item--size4 {
    grid-column: 1 / 3;
    grid-row: 1 / 3;
    aspect-ratio: 1 / 1;
    z-index: 1;
  }

  /* Default: normal size (1x1) - takes one grid cell */
  .clickable-lookbook-{{ section_id }}__image-item:not([class*="--size"]) {
    aspect-ratio: 1 / 1;
  }

  .clickable-lookbook-{{ section_id }}__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .clickable-lookbook-{{ section_id }}__image-link {
    display: block;
    width: 100%;
    height: 100%;
    text-decoration: none;
    color: inherit;
  }

  .clickable-lookbook-{{ section_id }}__overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0);
    transition: background 0.3s ease;
    z-index: 2;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .clickable-lookbook-{{ section_id }}__image-item:hover .clickable-lookbook-{{ section_id }}__overlay {
    background: rgba(0, 0, 0, 0.1);
  }

  .clickable-lookbook-{{ section_id }}__product-info {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0));
    padding: 1.5rem;
    color: #ffffff;
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: 3;
  }

  .clickable-lookbook-{{ section_id }}__image-item:hover .clickable-lookbook-{{ section_id }}__product-info {
    opacity: 1;
  }

  .clickable-lookbook-{{ section_id }}__product-title {
    margin: 0 0 0.25rem 0;
    font-size: 1rem;
    font-weight: 600;
    color: #ffffff;
  }

  .clickable-lookbook-{{ section_id }}__product-price {
    margin: 0;
    font-size: 0.875rem;
    color: #ffffff;
    opacity: 0.9;
  }


  @media screen and (max-width: 768px) {
    .clickable-lookbook-{{ section_id }} {
      padding: 2rem 0;
      width: 100%;
      overflow-x: hidden;
    }

    .clickable-lookbook-{{ section_id }}__container {
      padding: 0 1rem;
      width: 100%;
      max-width: 100%;
    }

    .clickable-lookbook-{{ section_id }}__wrapper {
      gap: 0.375rem;
      aspect-ratio: 1 / 1;
    }

    .clickable-lookbook-{{ section_id }}__image-item {
      border-radius: 6px;
    }

    .clickable-lookbook-{{ section_id }}__image-item:hover {
      transform: none;
    }

    .clickable-lookbook-{{ section_id }}__product-info {
      padding: 1rem;
      opacity: 1;
    }

    .clickable-lookbook-{{ section_id }}__product-title {
      font-size: 0.875rem;
    }

    .clickable-lookbook-{{ section_id }}__product-price {
      font-size: 0.75rem;
    }
  }
{%- endstyle -%}

<section class="clickable-lookbook-{{ section_id }}" data-section-id="{{ section.id }}">
  <div class="clickable-lookbook-{{ section_id }}__container">
    {%- if image_blocks.size > 0 -%}
      <div class="clickable-lookbook-{{ section_id }}__wrapper">
        {%- for block in image_blocks limit: 4 -%}
          {%- assign image = block.settings.image -%}
          {%- assign product = all_products[block.settings.product] -%}
          {%- assign image_size = block.settings.image_size | default: 'normal' -%}
          
          {%- if image != blank -%}
            <div class="clickable-lookbook-{{ section_id }}__image-item clickable-lookbook-{{ section_id }}__image-item--{{ image_size }}" {{ block.shopify_attributes }}>
              {%- if product != blank -%}
                <a href="{{ product.url }}" class="clickable-lookbook-{{ section_id }}__image-link" aria-label="{{ product.title }}">
              {%- endif -%}
              
              {%- assign image_class = 'clickable-lookbook-' | append: section_id | append: '__image' -%}
              {%- assign image_alt = product.title | default: 'Lookbook image' -%}
              {{ image | image_url: width: 800 | image_tag: loading: 'lazy', alt: image_alt, class: image_class }}
              
              {%- if product != blank -%}
                  <div class="clickable-lookbook-{{ section_id }}__overlay"></div>
                  <div class="clickable-lookbook-{{ section_id }}__product-info">
                    <h3 class="clickable-lookbook-{{ section_id }}__product-title">{{ product.title }}</h3>
                    <p class="clickable-lookbook-{{ section_id }}__product-price">{{ product.price | money }}</p>
                  </div>
                </a>
              {%- endif -%}
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</section>


{% schema %}
{
  "name": "Clickable Lookbook",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    }
  ],
  "blocks": [
    {
      "type": "lookbook_image",
      "name": "Lookbook Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "product",
          "id": "product",
          "label": "Product",
          "info": "Optional. Link this image to a product."
        },
        {
          "type": "select",
          "id": "image_size",
          "label": "Image Size",
          "options": [
            {
              "value": "size4",
              "label": "Small (1x1)"
            },
            {
              "value": "size2",
              "label": "Wide (2x1)"
            },
            {
              "value": "size3",
              "label": "Tall (1x2)"
            },
            {
              "value": "size1",
              "label": "Large (2x2)"
            }
          ],
          "default": "size4",
          "info": "Controls how much space this image takes in the grid"
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "Clickable Lookbook",
      "blocks": [
        {
          "type": "lookbook_image",
          "settings": {
            "image_size": "size1"
          }
        },
        {
          "type": "lookbook_image",
          "settings": {
            "image_size": "size4"
          }
        },
        {
          "type": "lookbook_image",
          "settings": {
            "image_size": "size4"
          }
        },
        {
          "type": "lookbook_image",
          "settings": {
            "image_size": "size3"
          }
        }
      ]
    }
  ]
}
{% endschema %}

