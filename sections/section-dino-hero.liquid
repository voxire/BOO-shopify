{%- liquid
  assign section_id = section.id
  assign tagline = section.settings.tagline | default: 'As wild as a child'
  assign heading = section.settings.heading | default: 'Dino Boo'
  assign hero_image = section.settings.hero_image
  assign hero_bg_image = section.settings.hero_bg_image
  assign button_1_text = section.settings.button_1_text | default: 'Shop Now'
  assign button_1_link = section.settings.button_1_link | default: '#'
  assign button_2_text = section.settings.button_2_text | default: 'Learn more'
  assign button_2_link = section.settings.button_2_link | default: '#'
  assign bg_color_dark = section.settings.bg_color_dark | default: '#2d5016'
  assign bg_color_light = section.settings.bg_color_light | default: '#4a7c2a'
  assign box_1_text = section.settings.box_1_text
  assign box_2_text = section.settings.box_2_text
  assign box_2_image = section.settings.box_2_image
  assign box_3_warning = section.settings.box_3_warning
  assign box_3_text_1 = section.settings.box_3_text_1
  assign box_3_text_2 = section.settings.box_3_text_2
  assign box_3_text_3 = section.settings.box_3_text_3
  assign box_4_text_1 = section.settings.box_4_text_1
  assign box_4_text_2 = section.settings.box_4_text_2
  assign box_4_text_3 = section.settings.box_4_text_3
  assign box_4_text_4 = section.settings.box_4_text_4
  assign box_4_image = section.settings.box_4_image
  assign border_radius = section.settings.border_radius | default: 24
  assign spacing = section.settings.spacing | default: 40
-%}

<section class="dino-hero dino-hero--{{ section_id }}" data-section-id="{{ section_id }}">
  {%- style -%}
    .dino-hero--{{ section_id }} {
      --bg-dark: {{ bg_color_dark }};
      --bg-light: {{ bg_color_light }};
      --radius: {{ border_radius }}px;
      --spacing: {{ spacing }}px;
    }
  {%- endstyle -%}

  <div class="dino-hero__top">
    {%- if hero_bg_image != blank -%}
      <div class="dino-hero__bg-image">
        <img
          src="{{ hero_bg_image | image_url: width: 1920 }}"
          srcset="{{ hero_bg_image | image_url: width: 1920 }} 1x, {{ hero_bg_image | image_url: width: 3840 }} 2x"
          alt=""
          class="dino-hero__bg-img"
          loading="eager"
        >
      </div>
    {%- endif -%}
    
    <div class="dino-hero__top-content">
      {%- if tagline != blank -%}
        <p class="dino-hero__tagline">{{ tagline }}</p>
      {%- endif -%}
      
      {%- if heading != blank -%}
        <h1 class="dino-hero__heading">{{ heading }}</h1>
      {%- endif -%}

      {%- if hero_image != blank -%}
        <div class="dino-hero__image-wrapper">
          <img
            src="{{ hero_image | image_url: width: 800 }}"
            srcset="{{ hero_image | image_url: width: 800 }} 1x, {{ hero_image | image_url: width: 1600 }} 2x"
            alt="{{ heading | escape }}"
            class="dino-hero__image"
            loading="eager"
          >
        </div>
      {%- endif -%}

      <div class="dino-hero__buttons">
        {%- if button_1_text != blank -%}
          <a href="{{ button_1_link }}" class="dino-hero__button dino-hero__button--primary">
            {{ button_1_text }}
          </a>
        {%- endif -%}
        
        {%- if button_2_text != blank -%}
          <a href="{{ button_2_link }}" class="dino-hero__button dino-hero__button--secondary">
            {{ button_2_text }}
          </a>
        {%- endif -%}
      </div>
    </div>
  </div>

  <div class="dino-hero__lower">
    <div class="dino-hero__container">
      <div class="dino-hero__boxes-grid">
        {%- if box_1_text != blank -%}
          <div class="dino-hero__box dino-hero__box--1">
            <div class="dino-hero__box-1-text">{{ box_1_text }}</div>
          </div>
        {%- endif -%}

        {%- if box_2_text != blank or box_2_image != blank -%}
          <div class="dino-hero__box dino-hero__box--2">
            {%- if box_2_image != blank -%}
              <div class="dino-hero__box-2-image">
                <img
                  src="{{ box_2_image | image_url: width: 300 }}"
                  srcset="{{ box_2_image | image_url: width: 300 }} 1x, {{ box_2_image | image_url: width: 600 }} 2x"
                  alt=""
                  class="dino-hero__box-2-img"
                  loading="lazy"
                >
              </div>
            {%- endif -%}
            {%- if box_2_text != blank -%}
              <div class="dino-hero__box-2-text">{{ box_2_text }}</div>
            {%- endif -%}
          </div>
        {%- endif -%}

        {%- if box_3_warning != blank or box_3_text_1 != blank -%}
          <div class="dino-hero__box dino-hero__box--3">
            {%- if box_3_warning != blank -%}
              <div class="dino-hero__box-3-warning">{{ box_3_warning }}</div>
            {%- endif -%}
            {%- if box_3_text_1 != blank -%}
              <div class="dino-hero__box-3-text dino-hero__box-3-text--bold">{{ box_3_text_1 }}</div>
            {%- endif -%}
            {%- if box_3_text_2 != blank -%}
              <div class="dino-hero__box-3-text">{{ box_3_text_2 }}</div>
            {%- endif -%}
            {%- if box_3_text_3 != blank -%}
              <div class="dino-hero__box-3-text">{{ box_3_text_3 }}</div>
            {%- endif -%}
          </div>
        {%- endif -%}

        {%- if box_4_text_1 != blank or box_4_image != blank -%}
          <div class="dino-hero__box dino-hero__box--4">
            {%- if box_4_text_1 != blank -%}
              <div class="dino-hero__box-4-text">{{ box_4_text_1 }}</div>
            {%- endif -%}
            {%- if box_4_text_2 != blank -%}
              <div class="dino-hero__box-4-text">{{ box_4_text_2 }}</div>
            {%- endif -%}
            {%- if box_4_text_3 != blank -%}
              <div class="dino-hero__box-4-text dino-hero__box-4-text--bold">{{ box_4_text_3 }}</div>
            {%- endif -%}
            {%- if box_4_text_4 != blank -%}
              <div class="dino-hero__box-4-text">{{ box_4_text_4 }}</div>
            {%- endif -%}
            {%- if box_4_image != blank -%}
              <div class="dino-hero__box-4-image">
                <img
                  src="{{ box_4_image | image_url: width: 300 }}"
                  srcset="{{ box_4_image | image_url: width: 300 }} 1x, {{ box_4_image | image_url: width: 600 }} 2x"
                  alt=""
                  class="dino-hero__box-4-img"
                  loading="lazy"
                >
              </div>
            {%- endif -%}
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

<style>
  .dino-hero--{{ section_id }} {
    width: 100%;
    overflow: hidden;
  }

  .dino-hero--{{ section_id }} .dino-hero__top {
    background: var(--bg-dark);
    width: 100%;
    min-height: 600px;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 60px 20px;
  }

  .dino-hero--{{ section_id }} .dino-hero__bg-image {
    position: absolute;
    inset: 0;
    z-index: 0;
    overflow: hidden;
  }

  .dino-hero--{{ section_id }} .dino-hero__bg-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: blur(4px);
    transform: scale(1.1);
  }

  .dino-hero--{{ section_id }} .dino-hero__top::after {
    content: '';
    position: absolute;
    inset: 0;
    background: rgba(45, 80, 22, 0.6);
    z-index: 1;
  }

  .dino-hero--{{ section_id }} .dino-hero__top-content {
    max-width: 1200px;
    width: 100%;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
    position: relative;
    z-index: 2;
  }

  .dino-hero--{{ section_id }} .dino-hero__tagline {
    font-size: clamp(16px, 2vw, 20px);
    color: #ffffff;
    margin: 0;
    font-weight: 400;
    letter-spacing: 0.5px;
  }

  .dino-hero--{{ section_id }} .dino-hero__heading {
    font-size: clamp(48px, 8vw, 120px);
    font-weight: 700;
    color: #ffffff;
    margin: 0;
    line-height: 1;
    letter-spacing: -2px;
  }

  .dino-hero--{{ section_id }} .dino-hero__image-wrapper {
    max-width: 700px;
    width: 100%;
    margin: 20px 0;
    position: relative;
    z-index: 1;
  }

  .dino-hero--{{ section_id }} .dino-hero__image {
    width: 100%;
    height: auto;
    display: block;
  }

  .dino-hero--{{ section_id }} .dino-hero__buttons {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
    justify-content: center;
    margin-top: 10px;
  }

  .dino-hero--{{ section_id }} .dino-hero__button {
    display: inline-block;
    padding: 12px 28px;
    text-decoration: none;
    border-radius: 9999px;
    font-weight: 600;
    font-size: 16px;
    transition: transform 0.2s, opacity 0.2s;
    white-space: nowrap;
  }

  .dino-hero--{{ section_id }} .dino-hero__button--primary {
    background: #ffffff;
    color: var(--bg-dark);
  }

  .dino-hero--{{ section_id }} .dino-hero__button--secondary {
    background: var(--bg-light);
    color: #ffffff;
  }

  .dino-hero--{{ section_id }} .dino-hero__button:hover {
    transform: translateY(-2px);
    opacity: 0.9;
  }

  .dino-hero--{{ section_id }} .dino-hero__lower {
    background: var(--bg-light);
    width: 100%;
    padding: var(--spacing) 20px;
    border-radius: var(--radius) var(--radius) 0 0;
    margin-top: -{{ border_radius }}px;
    position: relative;
    z-index: 1;
  }

  .dino-hero--{{ section_id }} .dino-hero__container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .dino-hero--{{ section_id }} .dino-hero__boxes-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing);
  }

  .dino-hero--{{ section_id }} .dino-hero__box {
    background: var(--bg-light);
    border-radius: var(--radius);
    padding: var(--spacing);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
    position: relative;
  }

  .dino-hero--{{ section_id }} .dino-hero__box-1-text {
    font-size: clamp(18px, 2.5vw, 24px);
    line-height: 1.5;
    color: #ffffff;
    font-weight: 500;
    text-align: center;
  }

  .dino-hero--{{ section_id }} .dino-hero__box--2 {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 16px;
  }

  .dino-hero--{{ section_id }} .dino-hero__box-2-image {
    flex-shrink: 0;
  }

  .dino-hero--{{ section_id }} .dino-hero__box-2-img {
    width: auto;
    height: auto;
    max-width: 150px;
    max-height: 200px;
    display: block;
  }

  .dino-hero--{{ section_id }} .dino-hero__box-2-text {
    font-size: clamp(16px, 2vw, 20px);
    line-height: 1.5;
    color: #ffffff;
    text-align: center;
    font-weight: 500;
  }

  .dino-hero--{{ section_id }} .dino-hero__box--3 {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .dino-hero--{{ section_id }} .dino-hero__box-3-warning {
    font-size: clamp(20px, 2.5vw, 28px);
    font-weight: 700;
    color: #ffffff;
    margin-bottom: 8px;
  }

  .dino-hero--{{ section_id }} .dino-hero__box-3-text {
    font-size: clamp(14px, 1.8vw, 18px);
    line-height: 1.6;
    color: #ffffff;
  }

  .dino-hero--{{ section_id }} .dino-hero__box-3-text--bold {
    font-weight: 700;
  }

  .dino-hero--{{ section_id }} .dino-hero__box--4 {
    display: flex;
    flex-direction: column;
    gap: 12px;
    position: relative;
    padding-bottom: 80px;
  }

  .dino-hero--{{ section_id }} .dino-hero__box-4-text {
    font-size: clamp(16px, 2vw, 20px);
    line-height: 1.5;
    color: #ffffff;
  }

  .dino-hero--{{ section_id }} .dino-hero__box-4-text--bold {
    font-weight: 700;
  }

  .dino-hero--{{ section_id }} .dino-hero__box-4-image {
    position: absolute;
    bottom: -40px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 2;
  }

  .dino-hero--{{ section_id }} .dino-hero__box-4-img {
    width: auto;
    height: auto;
    max-width: 200px;
    max-height: 150px;
    display: block;
  }

  @media screen and (max-width: 749px) {
    .dino-hero--{{ section_id }} .dino-hero__top {
      min-height: 500px;
      padding: 40px 20px;
    }

    .dino-hero--{{ section_id }} .dino-hero__boxes-grid {
      grid-template-columns: 1fr;
    }

    .dino-hero--{{ section_id }} .dino-hero__box {
      padding: 24px;
    }

    .dino-hero--{{ section_id }} .dino-hero__box--4 {
      padding-bottom: 70px;
    }

    .dino-hero--{{ section_id }} .dino-hero__box-4-image {
      bottom: -30px;
    }

    .dino-hero--{{ section_id }} .dino-hero__box-4-img {
      max-width: 150px;
      max-height: 120px;
    }
  }
</style>

