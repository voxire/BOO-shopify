          }
        },
        {
          "type": "data_panel",
          "settings": {
            "title": "Biological Age",
            "subtitle": "Cellular Health",
            "show_chart": true,
            "chart_value": 68,
            "chart_color": "#f0e68c"
          }
        },
        {
          "type": "data_panel",
          "settings": {
            "title": "Hormone Levels",
            "subtitle": "Endocrine System",
            "show_chart": true,
            "chart_value": 79,
            "chart_color": "#98d8c8"
          }
        }
      ]
    }
  ]
}
{% endschema %}

