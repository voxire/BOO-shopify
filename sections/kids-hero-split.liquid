{%- liquid
  assign section_id = section.id
  assign top_heading = section.settings.top_heading
  assign top_rotated_text = section.settings.top_rotated_text
  assign top_button_text = section.settings.top_button_text
  assign top_button_url = section.settings.top_button_url
  assign section_bg_image = section.settings.section_bg_image
  assign top_hero_image = section.settings.top_hero_image
  assign top_min_height = section.settings.top_min_height | default: 65
  assign section_radius = section.settings.section_radius | default: 32
  assign card_blocks = section.blocks | where: 'type', 'card'
  assign product_image = section.settings.product_image
-%}

<section
  id="KidsHeroSplit-{{ section_id }}"
  class="kids-hero-split kids-hero-split--{{ section_id }}"
  style="--kids-section-radius: {{ section_radius }}px;{% if section_bg_image != blank %} --kids-section-bg-image: url({{ section_bg_image | image_url: width: 1920 }});{% endif %}"
>
  <div class="kids-hero-top">
    <div class="kids-hero-content">
      {%- if top_rotated_text != blank -%}
        <div class="kids-rotated-text">{{ top_rotated_text }}</div>
      {%- endif -%}
      
      <div class="kids-hero-main">
        {%- if top_heading != blank -%}
          <h1 class="kids-hero-heading">{{ top_heading }}</h1>
        {%- endif -%}
        
        {%- if top_hero_image != blank -%}
          <div class="kids-hero-image">
            <img
              src="{{ top_hero_image | image_url: width: 800 }}"
              srcset="{{ top_hero_image | image_url: width: 400 }} 400w,
                      {{ top_hero_image | image_url: width: 600 }} 600w,
                      {{ top_hero_image | image_url: width: 800 }} 800w"
              sizes="(max-width: 749px) 100vw, 50vw"
              alt="{{ top_hero_image.alt | default: top_heading | escape }}"
              loading="eager"
              width="{{ top_hero_image.width }}"
              height="{{ top_hero_image.height }}"
            >
          </div>
        {%- endif -%}
        
        {%- if top_button_text != blank and top_button_url != blank -%}
          <a href="{{ top_button_url }}" class="kids-hero-button">{{ top_button_text }}</a>
        {%- endif -%}
      </div>
    </div>
  </div>

  <div class="kids-hero-bottom">
    <div class="kids-bottom-container">
      <div class="kids-bottom-grid">
        {%- if card_blocks.size > 0 -%}
          <div class="kids-cards-wrapper">
            {%- for block in card_blocks limit: 2 -%}
              <div class="kids-card" {{ block.shopify_attributes }}>
                {%- if block.settings.card_image != blank -%}
                  <div class="kids-card-image">
                    <img
                      src="{{ block.settings.card_image | image_url: width: 600 }}"
                      alt="{{ block.settings.card_image.alt | default: block.settings.card_title | escape }}"
                      loading="lazy"
                      width="{{ block.settings.card_image.width }}"
                      height="{{ block.settings.card_image.height }}"
                    >
                  </div>
                {%- endif -%}
                
                {%- if block.settings.card_title != blank -%}
                  <h3 class="kids-card-title">{{ block.settings.card_title }}</h3>
                {%- endif -%}
                
                {%- if block.settings.card_text != blank -%}
                  <p class="kids-card-text">{{ block.settings.card_text }}</p>
                {%- endif -%}
              </div>
            {%- endfor -%}
          </div>
        {%- endif -%}
        
        {%- if product_image != blank -%}
          <div class="kids-product-image">
            <img
              src="{{ product_image | image_url: width: 800 }}"
              srcset="{{ product_image | image_url: width: 400 }} 400w,
                      {{ product_image | image_url: width: 600 }} 600w,
                      {{ product_image | image_url: width: 800 }} 800w"
              sizes="(max-width: 749px) 100vw, 50vw"
              alt="{{ product_image.alt | escape }}"
              loading="lazy"
              width="{{ product_image.width }}"
              height="{{ product_image.height }}"
            >
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

<style>
  /* Kids Hero Split Section Base */
  .kids-hero-split--{{ section_id }} {
    width: 100%;
    max-width: var(--page-width, 120rem);
    margin: 0 auto;
    border-radius: var(--kids-section-radius);
    overflow: hidden;
    background-image: var(--kids-section-bg-image, none);
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
    position: relative;
  }

  /* Top Hero Area */
  .kids-hero-split--{{ section_id }} .kids-hero-top {
    width: 100%;
    min-height: {{ top_min_height }}vh;
    position: relative;
    background: transparent;
    border-radius: var(--kids-section-radius) var(--kids-section-radius) 0 0;
    padding: 4rem 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .kids-hero-split--{{ section_id }} .kids-hero-content {
    position: relative;
    width: 100%;
    max-width: 120rem;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2;
  }

  .kids-hero-split--{{ section_id }} .kids-rotated-text {
    position: absolute;
    left: 2rem;
    top: 50%;
    transform: translateY(-50%) rotate(-90deg);
    transform-origin: center;
    font-size: clamp(1.2rem, 2vw, 2rem);
    font-weight: 700;
    color: rgba(var(--color-foreground), 0.9);
    white-space: nowrap;
    z-index: 3;
    letter-spacing: 0.1em;
  }

  .kids-hero-split--{{ section_id }} .kids-hero-main {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    width: 100%;
  }

  .kids-hero-split--{{ section_id }} .kids-hero-heading {
    font-size: clamp(4rem, 10vw, 9.6rem);
    font-weight: 900;
    line-height: 0.9;
    margin: 0 0 2rem;
    color: rgba(var(--color-foreground), 1);
    letter-spacing: -0.02em;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .kids-hero-split--{{ section_id }} .kids-hero-image {
    width: 100%;
    max-width: 500px;
    margin: 2rem 0;
    position: relative;
    z-index: 1;
  }

  .kids-hero-split--{{ section_id }} .kids-hero-image img {
    width: 100%;
    height: auto;
    display: block;
    border-radius: 2rem;
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
  }

  .kids-hero-split--{{ section_id }} .kids-hero-button {
    display: inline-block;
    padding: 1.6rem 4rem;
    border-radius: 5rem;
    font-size: 1.8rem;
    font-weight: 700;
    text-decoration: none;
    background: rgba(var(--color-button), 1);
    color: rgba(var(--color-button-text), 1);
    box-shadow: 0 4px 16px rgba(var(--color-button), 0.3);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    margin-top: 2rem;
  }

  .kids-hero-split--{{ section_id }} .kids-hero-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(var(--color-button), 0.4);
  }

  /* Bottom Content Area */
  .kids-hero-split--{{ section_id }} .kids-hero-bottom {
    width: 100%;
    background: transparent;
    border-radius: 0 0 var(--kids-section-radius) var(--kids-section-radius);
    padding: 4rem 2rem;
    position: relative;
  }

  .kids-hero-split--{{ section_id }} .kids-bottom-container {
    max-width: 120rem;
    margin: 0 auto;
  }

  .kids-hero-split--{{ section_id }} .kids-bottom-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2.4rem;
    align-items: start;
  }

  @media screen and (min-width: 750px) {
    .kids-hero-split--{{ section_id }} .kids-bottom-grid {
      grid-template-columns: 1fr 1fr;
      gap: 3.2rem;
    }
  }

  /* Cards Wrapper */
  .kids-hero-split--{{ section_id }} .kids-cards-wrapper {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2.4rem;
  }

  /* Card Styling */
  .kids-hero-split--{{ section_id }} .kids-card {
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.9) 0%, rgba(255, 250, 250, 0.95) 100%);
    border-radius: 2.4rem;
    padding: 3.2rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .kids-hero-split--{{ section_id }} .kids-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
  }

  .kids-hero-split--{{ section_id }} .kids-card-image {
    width: 100%;
    margin-bottom: 2rem;
    border-radius: 1.6rem;
    overflow: hidden;
  }

  .kids-hero-split--{{ section_id }} .kids-card-image img {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  .kids-hero-split--{{ section_id }} .kids-card-title {
    font-size: 2.4rem;
    font-weight: 700;
    margin: 0 0 1.2rem;
    color: rgba(var(--color-foreground), 1);
    line-height: 1.2;
  }

  .kids-hero-split--{{ section_id }} .kids-card-text {
    font-size: 1.6rem;
    line-height: 1.6;
    margin: 0;
    color: rgba(var(--color-foreground), 0.7);
    flex: 1;
  }

  /* Product Image */
  .kids-hero-split--{{ section_id }} .kids-product-image {
    width: 100%;
    position: relative;
  }

  .kids-hero-split--{{ section_id }} .kids-product-image img {
    width: 100%;
    height: auto;
    display: block;
    border-radius: 2rem;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
  }

  .kids-hero-split--{{ section_id }} .kids-product-image:hover img {
    transform: scale(1.02);
  }

  /* Mobile Adjustments */
  @media screen and (max-width: 749px) {
    .kids-hero-split--{{ section_id }} .kids-hero-top {
      min-height: 50vh;
      padding: 3rem 1.5rem;
    }

    .kids-hero-split--{{ section_id }} .kids-rotated-text {
      display: none;
    }

    .kids-hero-split--{{ section_id }} .kids-hero-bottom {
      padding: 3rem 1.5rem;
    }

    .kids-hero-split--{{ section_id }} .kids-card {
      padding: 2.4rem;
    }
  }
</style>

{% schema %}
{
  "name": "Kids Hero Split",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Top Hero Area"
    },
    {
      "type": "text",
      "id": "top_heading",
      "label": "Heading",
      "default": "Boo"
    },
    {
      "type": "text",
      "id": "top_rotated_text",
      "label": "Rotated Side Text",
      "info": "Text that appears vertically on the left side"
    },
    {
      "type": "image_picker",
      "id": "top_hero_image",
      "label": "Hero Image",
      "info": "Main hero image (kid model)"
    },
    {
      "type": "text",
      "id": "top_button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "top_button_url",
      "label": "Button URL"
    },
    {
      "type": "range",
      "id": "top_min_height",
      "label": "Top Area Minimum Height",
      "min": 40,
      "max": 90,
      "step": 5,
      "default": 65,
      "unit": "vh"
    },
    {
      "type": "header",
      "content": "Bottom Content Area"
    },
    {
      "type": "image_picker",
      "id": "product_image",
      "label": "Product Image",
      "info": "Product image on the right side"
    },
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "image_picker",
      "id": "section_bg_image",
      "label": "Section Background Image",
      "info": "Background image for the entire section (covers both top and bottom areas)"
    },
    {
      "type": "range",
      "id": "section_radius",
      "label": "Section Border Radius",
      "min": 0,
      "max": 60,
      "step": 2,
      "default": 32,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Content Card",
      "limit": 2,
      "settings": [
        {
          "type": "image_picker",
          "id": "card_image",
          "label": "Card Image"
        },
        {
          "type": "text",
          "id": "card_title",
          "label": "Card Title",
          "default": "Card Title"
        },
        {
          "type": "textarea",
          "id": "card_text",
          "label": "Card Text",
          "default": "Card description text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Kids Hero Split",
      "blocks": [
        {
          "type": "card"
        },
        {
          "type": "card"
        }
      ]
    }
  ]
}
{% endschema %}

